@model Javo2.ViewModels.Operaciones.Clientes.ClientesViewModel

<div>
    <!-- Datos Personales -->
    <div class="mb-4">
        <h5 class="text-light border-bottom pb-2">Datos Personales</h5>
        <div class="row g-3 mt-2">
            <div class="col-md-6">
                <label asp-for="Nombre" class="form-label text-light"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="invalid-feedback d-block"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Apellido" class="form-label text-light"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="invalid-feedback d-block"></span>
            </div>
        </div>
        <div class="row g-3 mt-3">
            <div class="col-md-4">
                <label asp-for="DNI" class="form-label text-light"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="invalid-feedback d-block"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Email" class="form-label text-light"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Telefono" class="form-label text-light"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="invalid-feedback d-block"></span>
            </div>
        </div>
        <div class="row g-3 mt-3">
            <div class="col-md-4">
                <label asp-for="Celular" class="form-label text-light"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="invalid-feedback d-block"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="TelefonoTrabajo" class="form-label text-light"></label>
                <input asp-for="TelefonoTrabajo" class="form-control" />
                <span asp-validation-for="TelefonoTrabajo" class="invalid-feedback d-block"></span>
            </div>
            <div class="col-md-4 d-flex align-items-center pt-2">
                <div class="form-check">
                    <input asp-for="Verificar" class="form-check-input" />
                    <label asp-for="Verificar" class="form-check-label text-light"></label>
                </div>
                <span asp-validation-for="Verificar" class="invalid-feedback d-block"></span>
            </div>
        </div>
    </div>

    <!-- Datos Domiciliarios -->
    <div class="mb-4">
        <h5 class="text-light border-bottom pb-2">Datos Domiciliarios</h5>
        <div class="row g-3 mt-2">
            <div class="col-md-6">
                <label asp-for="Calle" class="form-label text-light"></label>
                <input asp-for="Calle" class="form-control" />
                <span asp-validation-for="Calle" class="invalid-feedback d-block"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="NumeroCalle" class="form-label text-light"></label>
                <input asp-for="NumeroCalle" class="form-control" />
                <span asp-validation-for="NumeroCalle" class="invalid-feedback d-block"></span>
            </div>
        </div>
        <div class="row g-3 mt-3">
            <div class="col-md-4">
                <label asp-for="ProvinciaID" class="form-label text-light"></label>
                <select asp-for="ProvinciaID" asp-items="Model.Provincias" class="form-select" id="ProvinciaID">
                    <option value="">-- Seleccione una provincia --</option>
                </select>
                <span asp-validation-for="ProvinciaID" class="invalid-feedback d-block"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="CiudadID" class="form-label text-light"></label>
                <select asp-for="CiudadID" asp-items="Model.Ciudades" class="form-select" id="CiudadID">
                    <option value="">-- Seleccione una ciudad --</option>
                </select>
                <span asp-validation-for="CiudadID" class="invalid-feedback d-block"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="EstadoComentario" class="form-label text-light"></label>
                <input asp-for="EstadoComentario" class="form-control" />
                <span asp-validation-for="EstadoComentario" class="invalid-feedback d-block"></span>
            </div>
        </div>
        <div class="row g-3 mt-3">
            <div class="col-md-4">
                <label asp-for="Localidad" class="form-label text-light"></label>
                <input asp-for="Localidad" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="CodigoPostal" class="form-label text-light"></label>
                <input asp-for="CodigoPostal" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="DescripcionDomicilio" class="form-label text-light"></label>
                <input asp-for="DescripcionDomicilio" class="form-control" />
            </div>
        </div>
    </div>
</div>
