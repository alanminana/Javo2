<tbody>
    @foreach (var cliente in Model)
    {
        <tr>
            <td scope="row">@cliente.ClienteID</td>
            <td>@cliente.Nombre</td>
            <td>@cliente.Apellido</td>
            <td>@cliente.DNI</td>
            <td>@cliente.Email</td>
            <td>
                <span class="badge @(cliente.Activo ? "bg-success" : "bg-danger")">
                    @(cliente.Activo ? "Activo" : "Inactivo")
                </span>
            </td>
            <td class="text-center">
                <div class="btn-group" role="group" aria-label="Acciones para @cliente.Nombre @cliente.Apellido">
                    <a asp-action="Edit"
                       asp-route-id="@cliente.ClienteID"
                       class="btn btn-sm btn-outline-primary"
                       title="Editar cliente @cliente.Nombre @cliente.Apellido">
                        <i class="bi bi-pencil-square" aria-hidden="true"></i>
                        <span class="visually-hidden">Editar</span>
                    </a>
                    <a asp-action="Details"
                       asp-route-id="@cliente.ClienteID"
                       class="btn btn-sm btn-outline-info"
                       title="Ver detalles de @cliente.Nombre @cliente.Apellido">
                        <i class="bi bi-eye" aria-hidden="true"></i>
                        <span class="visually-hidden">Detalles</span>
                    </a>
                    <form asp-action="Delete"
                          asp-route-id="@cliente.ClienteID"
                          method="post"
                          onsubmit="return confirm('¿Estás seguro de eliminar a @cliente.Nombre @cliente.Apellido?');"
                          class="d-inline">
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger"
                                title="Eliminar cliente @cliente.Nombre @cliente.Apellido">
                            <i class="bi bi-trash" aria-hidden="true"></i>
                            <span class="visually-hidden">Eliminar</span>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    }
</tbody>
