@model IEnumerable<Javo2.ViewModels.Operaciones.Clientes.ClientesViewModel>

@foreach (var cliente in Model)
{
    <tr>
        <td>@cliente.ClienteID</td>
        <td>@cliente.Nombre</td>
        <td>@cliente.Apellido</td>
        <td>@cliente.DNI</td>
        <td>@cliente.Email</td>
        <td>
            @if (cliente.Activo)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@cliente.ClienteID" class="btn btn-sm btn-primary me-2">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Details" asp-route-id="@cliente.ClienteID" class="btn btn-sm btn-info me-2">
                <i class="bi bi-eye me-1"></i> Detalles
            </a>
            <a asp-action="Delete" asp-route-id="@cliente.ClienteID" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de eliminar este cliente?');">
                <i class="bi bi-trash me-1"></i> Eliminar
            </a>
        </td>
    </tr>
}
