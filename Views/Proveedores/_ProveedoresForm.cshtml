@model Javo2.ViewModels.Operaciones.Proveedores.ProveedoresViewModel

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label text-light"></label>
            <input asp-for="Nombre" class="form-control bg-secondary text-light" />
            <span asp-validation-for="Nombre" class="invalid-feedback d-block"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Direccion" class="form-label text-light"></label>
            <input asp-for="Direccion" class="form-control bg-secondary text-light" />
            <span asp-validation-for="Direccion" class="invalid-feedback d-block"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Telefono" class="form-label text-light"></label>
            <input asp-for="Telefono" class="form-control bg-secondary text-light" />
            <span asp-validation-for="Telefono" class="invalid-feedback d-block"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label text-light"></label>
            <input asp-for="Email" class="form-control bg-secondary text-light" />
            <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CondicionesPago" class="form-label text-light"></label>
            <textarea asp-for="CondicionesPago" class="form-control bg-secondary text-light" rows="3"></textarea>
            <span asp-validation-for="CondicionesPago" class="invalid-feedback d-block"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-dark text-light mb-3">
            <div class="card-header">
                <h5 class="mb-0">Productos del Proveedor</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="productSearch" class="form-label">Buscar Productos</label>
                    <div class="input-group">
                        <input type="text" id="productSearch" class="form-control bg-secondary text-light"
                               placeholder="Buscar por nombre, código..." autocomplete="off" />
                        <button type="button" id="searchProductBtn" class="btn btn-primary">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                    <small class="form-text text-muted">Busque y seleccione productos para asociar</small>
                </div>

                <div class="table-responsive">
                    <table class="table table-dark table-sm mb-0">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Marca</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody id="assignedProducts">
                            @for (int i = 0; i < Model.ProductosAsignados.Count; i++)
                            {
                                var pid = Model.ProductosAsignados[i];
                                var pname = Model.ProductosAsignadosNombres.ElementAtOrDefault(i) ?? "";
                                var marca = Model.ProductosAsignadosMarcas?.ElementAtOrDefault(i) ?? "";
                                <tr data-id="@pid">
                                    <td>@pname</td>
                                    <td>@marca</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-danger remove-product">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                        <input type="hidden" name="ProductosAsignados" value="@pid" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div id="searchResults" class="mt-3" style="max-height: 300px; overflow-y: auto; display: none;">
                    <h6>Resultados de búsqueda</h6>
                    <table class="table table-dark table-sm" id="productResultsTable">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Marca</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Los resultados de búsqueda se cargarán aquí dinámicamente -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/modules/proveedor-form.js"></script>

    }

}