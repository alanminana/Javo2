// Archivo: Views/Proveedores/Details.cshtml
@model Javo2.ViewModels.Operaciones.Proveedores.ProveedoresViewModel

@{
    ViewBag.Title = "Detalles del Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewBag.Title</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Dirección</dt>
        <dd class="col-sm-9">@Model.Direccion</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Condiciones de Pago</dt>
        <dd class="col-sm-9">@Model.CondicionesPago</dd>

        <dt class="col-sm-3">Productos Asignados</dt>
        <dd class="col-sm-9">
            @if (Model.ProductosAsignadosNombres != null && Model.ProductosAsignadosNombres.Any())
            {
            <ul>
                @for (int i = 0; i < Model.ProductosAsignadosNombres.Count; i++)
                    {
                        var productName = Model.ProductosAsignadosNombres[i];
                        var stock = Model.ProductosAsignadosStocks.Count > i ? Model.ProductosAsignadosStocks[i] : 0;
                <li>@productName (Stock: @stock)</li>
                    }
            </ul>
            }
            else
            {
            <span>No hay productos asignados</span>
            }
        </dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.ProveedorID" class="btn btn-primary me-2">
            <i class="bi bi-pencil-square me-2"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i> Volver al Listado
        </a>
    </div>
</div>