<!-- Views/Proveedores/Compras.cshtml -->
@model IEnumerable<Javo2.ViewModels.Operaciones.Proveedores.CompraProveedorViewModel>
@{
    ViewBag.Title = "Compras a Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">@ViewBag.Title</h1>
        <div>
            <a asp-action="CrearCompra" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Nueva Compra
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-dark mb-0" aria-label="Listado de Compras a Proveedores">
                    <thead class="bg-secondary text-light">
                        <tr>
                            <th scope="col">Factura</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Proveedor</th>
                            <th scope="col">Total</th>
                            <th scope="col">Estado</th>
                            <th scope="col" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var compra in Model)
                            {
                                <tr>
                                    <td>@compra.NumeroFactura</td>
                                    <td>@compra.FechaCompra.ToString("dd/MM/yyyy")</td>
                                    <td>@compra.NombreProveedor</td>
                                    <td>@compra.PrecioTotal.ToString("C")</td>
                                    <td>
                                        @switch (compra.Estado)
                                        {
                                            case "Pendiente":
                                                <span class="badge bg-warning">Pendiente</span>
                                                break;
                                            case "Procesada":
                                                <span class="badge bg-info">Procesada</span>
                                                break;
                                            case "Completada":
                                                <span class="badge bg-success">Completada</span>
                                                break;
                                            case "Cancelada":
                                                <span class="badge bg-danger">Cancelada</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetallesCompra" asp-route-id="@compra.CompraID" class="btn btn-sm btn-outline-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (compra.Estado != "Completada" && compra.Estado != "Cancelada")
                                            {
                                                <a asp-action="EditarCompra" asp-route-id="@compra.CompraID" class="btn btn-sm btn-outline-primary" title="Editar">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                            }
                                            <a asp-action="EliminarCompra" asp-route-id="@compra.CompraID" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No hay compras registradas</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>