@model Javo2.ViewModels.Operaciones.Proveedores.CompraProveedorViewModel
@{
    var isEdit = Model.CompraID > 0;
    ViewBag.Title = isEdit ? "Editar Compra" : "Nueva Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">@ViewBag.Title</h1>
    </div>

    <div class="card shadow-sm bg-dark text-light">
        <div class="card-body">
            <form asp-action="@(isEdit ? "EditarCompra" : "CrearCompra")" method="post" id="compraForm" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CompraID" />
                <input type="hidden" asp-for="Usuario" value="@(User.Identity?.Name ?? "Desconocido")" />
                <input type="hidden" asp-for="Estado" value="@(isEdit ? Model.Estado : "Pendiente")" />

                <ul class="nav nav-tabs mb-3" id="compraTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="datos-tab" data-bs-toggle="tab" data-bs-target="#datos"
                                type="button" role="tab" aria-controls="datos" aria-selected="true">
                            Datos Generales
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="productos-tab" data-bs-toggle="tab" data-bs-target="#productos"
                                type="button" role="tab" aria-controls="productos" aria-selected="false">
                            Productos
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pagos-tab" data-bs-toggle="tab" data-bs-target="#pagos"
                                type="button" role="tab" aria-controls="pagos" aria-selected="false">
                            Forma de Pago
                        </button>
                    </li>
                </ul>

                <div class="tab-content">
                    <!-- Pestaña: Datos Generales -->
                    <div class="tab-pane fade show active" id="datos" role="tabpanel" aria-labelledby="datos-tab">
                        <!-- Datos de la Compra -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FechaCompra" class="form-label">Fecha</label>
                                <input asp-for="FechaCompra" type="date" class="form-control bg-secondary text-light" />
                                <span asp-validation-for="FechaCompra" class="invalid-feedback d-block"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NumeroFactura" class="form-label">Factura</label>
                                <input asp-for="NumeroFactura" class="form-control bg-secondary text-light" readonly />
                                <span asp-validation-for="NumeroFactura" class="invalid-feedback d-block"></span>
                            </div>
                        </div>

                        <!-- Datos del Proveedor -->
                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <label asp-for="ProveedorID" class="form-label">Proveedor</label>
                                <select asp-for="ProveedorID" asp-items="Model.Proveedores" class="form-select bg-secondary text-light">
                                    <option value="">-- Seleccione un proveedor --</option>
                                </select>
                                <span asp-validation-for="ProveedorID" class="invalid-feedback d-block"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Observaciones" class="form-label">Observaciones</label>
                                <textarea asp-for="Observaciones" class="form-control bg-secondary text-light" rows="3"></textarea>
                                <span asp-validation-for="Observaciones" class="invalid-feedback d-block"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Pestaña: Productos -->
                    <div class="tab-pane fade" id="productos" role="tabpanel" aria-labelledby="productos-tab">
                        <!-- Búsqueda de Productos -->
                        <div class="card mb-4 bg-secondary">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Agregar Producto</h5>
                                <button type="button" class="btn btn-sm btn-outline-light" id="toggleSearchBtn">
                                    <i class="bi bi-arrows-expand"></i>
                                </button>
                            </div>
                            <div class="card-body" id="searchProductSection">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label for="productoCodigo" class="form-label">Código/Barras</label>
                                        <div class="input-group">
                                            <input type="text" id="productoCodigo" class="form-control bg-dark text-light" placeholder="Código o barras" />
                                            <button type="button" id="buscarProducto" class="btn btn-primary">
                                                <i class="bi bi-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="productoNombre" class="form-label">Nombre Producto</label>
                                        <input type="text" id="productoNombre" class="form-control bg-dark text-light" readonly />
                                    </div>
                                    <div class="col-md-2">
                                        <label for="productoCantidad" class="form-label">Cantidad</label>
                                        <input type="number" id="productoCantidad" class="form-control bg-dark text-light" value="1" min="1" />
                                    </div>
                                    <div class="col-md-2">
                                        <label for="productoPrecio" class="form-label">Precio Unit.</label>
                                        <input type="number" id="productoPrecio" step="0.01" class="form-control bg-dark text-light" />
                                    </div>
                                    <div class="col-12 text-end">
                                        <button type="button" id="agregarProducto" class="btn btn-success">
                                            <i class="bi bi-plus-circle me-1"></i> Agregar Producto
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tabla de Productos -->
                        <div class="table-responsive">
                            <table class="table table-dark table-hover table-striped mb-0" id="productosTable">
                                <thead>
                                    <tr>
                                        <th>Código</th>
                                        <th>Producto</th>
                                        <th>Cant.</th>
                                        <th>Precio Unit.</th>
                                        <th>Subtotal</th>
                                        <th class="text-center">Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.ProductosCompra.Count; i++)
                                    {
                                        var p = Model.ProductosCompra[i];
                                        <tr data-index="@i">
                                            <td>
                                                <input type="hidden" name="ProductosCompra[@i].ProductoID" value="@p.ProductoID" />
                                                <input type="hidden" name="ProductosCompra[@i].NombreProducto" value="@p.NombreProducto" />
                                                <input type="hidden" name="ProductosCompra[@i].PrecioUnitario" value="@p.PrecioUnitario" />
                                                <input type="hidden" name="ProductosCompra[@i].PrecioTotal" value="@p.PrecioTotal" />
                                                @p.ProductoID
                                            </td>
                                            <td>@p.NombreProducto</td>
                                            <td>
                                                <input type="number" name="ProductosCompra[@i].Cantidad" value="@p.Cantidad" min="1"
                                                       class="form-control form-control-sm bg-dark text-light cantidad" />
                                            </td>
                                            <td>@p.PrecioUnitario.ToString("C")</td>
                                            <td><span class="subtotal">@(p.Cantidad * p.PrecioUnitario).ToString("C")</span></td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm btn-outline-danger eliminar-producto" aria-label="Eliminar producto">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="fw-bold">
                                        <td colspan="2" class="text-end">Total:</td>
                                        <td><span id="totalProductos">@Model.TotalProductos</span></td>
                                        <td></td>
                                        <td><span id="totalCompra">@Model.PrecioTotal.ToString("C")</span></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>


                    <!-- Pestaña: Forma de Pago -->
                    <div class="tab-pane fade" id="pagos" role="tabpanel" aria-labelledby="pagos-tab">
                        <!-- Forma de Pago -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FormaPagoID" class="form-label">Método</label>
                                <select asp-for="FormaPagoID" class="form-select bg-secondary text-light" id="FormaPagoID">
                                    <option value="">-- Seleccione --</option>
                                    @foreach (var fp in Model.FormasPago)
                                    {
                                        <option value="@fp.Value">@fp.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="FormaPagoID" class="invalid-feedback d-block"></span>
                            </div>

                            <!-- Contenedores condicionales para cada forma de pago -->
                            <div class="col-md-6">
                                <!-- Tarjeta de Crédito (FormaPagoID = 2) -->
                                <div id="tarjetaCreditoContainer" class="payment-container d-none">
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <label asp-for="TipoTarjeta" class="form-label">Tipo de Tarjeta</label>
                                            <select asp-for="TipoTarjeta" asp-items="Model.TipoTarjetaOptions"
                                                    class="form-select bg-secondary text-light">
                                                <option value="">-- Seleccione --</option>
                                            </select>
                                            <span asp-validation-for="TipoTarjeta" class="invalid-feedback d-block"></span>
                                        </div>
                                        <div class="col-12 mt-2">
                                            <label asp-for="Cuotas" class="form-label">Cuotas</label>
                                            <select asp-for="Cuotas" asp-items="Model.CuotasOptions"
                                                    class="form-select bg-secondary text-light">
                                                <option value="">-- Seleccione --</option>
                                            </select>
                                            <span asp-validation-for="Cuotas" class="invalid-feedback d-block"></span>
                                        </div>
                                        <div class="col-12 mt-2">
                                            <label asp-for="BancoID" class="form-label">Banco</label>
                                            <select asp-for="BancoID" asp-items="Model.Bancos"
                                                    class="form-select bg-secondary text-light">
                                                <option value="">-- Seleccione --</option>
                                            </select>
                                            <span asp-validation-for="BancoID" class="invalid-feedback d-block"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Tarjeta de Débito (FormaPagoID = 3) -->
                                <div id="tarjetaDebitoContainer" class="payment-container d-none">
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <label asp-for="BancoID" class="form-label">Banco</label>
                                            <select asp-for="BancoID" asp-items="Model.Bancos"
                                                    class="form-select bg-secondary text-light">
                                                <option value="">-- Seleccione --</option>
                                            </select>
                                            <span asp-validation-for="BancoID" class="invalid-feedback d-block"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Transferencia (FormaPagoID = 4) -->
                                <div id="transferenciaContainer" class="payment-container d-none">
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <label asp-for="BancoID" class="form-label">Banco</label>
                                            <select asp-for="BancoID" asp-items="Model.Bancos"
                                                    class="form-select bg-secondary text-light">
                                                <option value="">-- Seleccione --</option>
                                            </select>
                                            <span asp-validation-for="BancoID" class="invalid-feedback d-block"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Pago Virtual (FormaPagoID = 5) -->
                                <div id="pagoVirtualContainer" class="payment-container d-none">
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <label asp-for="EntidadElectronica" class="form-label">Entidad Electrónica</label>
                                            <select asp-for="EntidadElectronica" asp-items="Model.EntidadesElectronicas"
                                                    class="form-select bg-secondary text-light">
                                                <option value="">-- Seleccione --</option>
                                            </select>
                                            <span asp-validation-for="EntidadElectronica" class="invalid-feedback d-block"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Crédito Personal (FormaPagoID = 6) -->
                                <div id="creditoPersonalContainer" class="payment-container d-none">
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <label asp-for="Cuotas" class="form-label">Cuotas</label>
                                            <select asp-for="Cuotas" asp-items="Model.CuotasOptions"
                                                    class="form-select bg-secondary text-light">
                                                <option value="">-- Seleccione --</option>
                                            </select>
                                            <span asp-validation-for="Cuotas" class="invalid-feedback d-block"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Cheque (FormaPagoID = 7) -->
                        <div id="chequeContainer" class="payment-container d-none">
                            <div class="row g-2">
                                <div class="col-12">
                                    <label asp-for="MontoCheque" class="form-label">Monto del Cheque</label>
                                    <input asp-for="MontoCheque" type="number" min="0" step="0.01" class="form-control bg-secondary text-light" />
                                    <span asp-validation-for="MontoCheque" class="invalid-feedback d-block"></span>
                                </div>
                                <div class="col-12 mt-2">
                                    <label asp-for="NumeroCheque" class="form-label">Número de Cheque</label>
                                    <input asp-for="NumeroCheque" class="form-control bg-secondary text-light" />
                                    <span asp-validation-for="NumeroCheque" class="invalid-feedback d-block"></span>
                                </div>
                                <div class="col-12 mt-2">
                                    <label asp-for="FechaVencimiento" class="form-label">Fecha a Cobrar</label>
                                    <input asp-for="FechaVencimiento" type="date" class="form-control bg-secondary text-light" />
                                    <span asp-validation-for="FechaVencimiento" class="invalid-feedback d-block"></span>
                                </div>
                                <div class="col-12 mt-2">
                                    <label asp-for="BancoID" class="form-label">Banco</label>
                                    <select asp-for="BancoID" asp-items="Model.Bancos" class="form-select bg-secondary text-light">
                                        <option value="">-- Seleccione --</option>
                                    </select>
                                    <span asp-validation-for="BancoID" class="invalid-feedback d-block"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Reemplazar la sección de Cheque y Fecha de Vencimiento con un campo de aclaraciones global -->
                        <div class="row g-3 mt-3">
                            <div class="col-12">
                                <label for="Aclaraciones" class="form-label">Aclaraciones de Pago</label>
                                <textarea name="Aclaraciones" id="Aclaraciones" class="form-control bg-secondary text-light" rows="3"
                                          placeholder="Observaciones adicionales sobre el pago..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Botones de Acción -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Compras" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left me-1"></i> Volver al listado
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-1"></i> @(isEdit ? "Actualizar" : "Crear")
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Modal de producto no encontrado -->
<div class="modal fade" id="productoNoEncontradoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title">Producto no encontrado</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>No se encontró ningún producto con ese código.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para buscar productos -->
<div class="modal fade" id="buscarProductosModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title">Buscar productos</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="modalSearchTerm" class="form-label">Buscar</label>
                    <div class="input-group">
                        <input type="text" id="modalSearchTerm" class="form-control bg-secondary text-light" placeholder="Ingrese nombre, código o marca" />
                        <button type="button" id="modalSearchBtn" class="btn btn-primary">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                    </div>
                </div>
                <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                    <table class="table table-dark table-sm table-hover" id="modalResultsTable">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Producto</th>
                                <th>Marca</th>
                                <th>Precio</th>
                                <th class="text-center">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Los resultados se cargarán aquí -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <script defer src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script src="~/js/modules/compra-form.js"></script>

    }

}