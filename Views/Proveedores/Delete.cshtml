// Archivo: Views/Proveedores/Delete.cshtml
@model Javo2.ViewModels.Operaciones.Proveedores.ProveedoresViewModel

@{
    ViewBag.Title = "Eliminar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<h3>¿Está seguro que desea eliminar este proveedor?</h3>
<div>
    <h4>@Model.Nombre</h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProveedorID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>