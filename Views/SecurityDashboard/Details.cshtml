@model Javo2.ViewModels.Authentication.UsuarioDetailsViewModel
@{
    ViewData["Title"] = "Detalles de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">@ViewData["Title"]</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Usuario.UsuarioID" class="btn btn-primary btn-sm">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm bg-dark text-light mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Información del usuario</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Usuario.UsuarioID</dd>

                        <dt class="col-sm-4">Usuario</dt>
                        <dd class="col-sm-8">@Model.Usuario.NombreUsuario</dd>

                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Usuario.Nombre @Model.Usuario.Apellido</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Usuario.Email</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">
                            @if (Model.Usuario.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Creado por</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Usuario.CreadoPor) ? "Sistema" : Model.Usuario.CreadoPor)</dd>

                        <dt class="col-sm-4">Fecha de creación</dt>
                        <dd class="col-sm-8">@Model.Usuario.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Último acceso</dt>
                        <dd class="col-sm-8">@(Model.Usuario.UltimoAcceso.HasValue ? Model.Usuario.UltimoAcceso.Value.ToString("dd/MM/yyyy HH:mm") : "Nunca")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-header">
                    <h4 class="mb-0">Roles asignados</h4>
                </div>
                <div class="card-body">
                    @if (Model.Roles != null && Model.Roles.Any())
                    {
                        <div class="list-group">
                            @foreach (var rol in Model.Roles)
                            {
                                <div class="list-group-item bg-secondary text-light">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@rol.Nombre</h5>
                                        @if (rol.EsSistema)
                                        {
                                            <span class="badge bg-primary">Sistema</span>
                                        }
                                    </div>
                                    <p class="mb-0">@rol.Descripcion</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i> Este usuario no tiene roles asignados.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>