@model Javo2.ViewModels.Authentication.SecurityDashboardViewModel
@{
    ViewData["Title"] = "Panel de Seguridad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-primary">
            <i class="bi bi-shield-lock me-2"></i>@ViewData["Title"]
        </h1>
    </div>

    @await Html.PartialAsync("_Alerts")

    <!-- Dashboard Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-primary h-100 py-2 shadow">
                <div class="card-body bg-dark text-white">
                    <div class="d-flex no-gutters align-items-center">
                        <div class="me-3">
                            <div class="text-xs text-primary fw-bold text-uppercase mb-1">Usuarios Totales</div>
                            <div class="h4 mb-0 fw-bold text-gray-300">@Model.TotalUsuarios</div>
                        </div>
                        <div class="ms-auto">
                            <i class="bi bi-people-fill text-muted" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-success h-100 py-2 shadow">
                <div class="card-body bg-dark text-white">
                    <div class="d-flex no-gutters align-items-center">
                        <div class="me-3">
                            <div class="text-xs text-success fw-bold text-uppercase mb-1">Usuarios Activos</div>
                            <div class="h4 mb-0 fw-bold text-gray-300">@Model.UsuariosActivos</div>
                        </div>
                        <div class="ms-auto">
                            <i class="bi bi-person-check-fill text-muted" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-info h-100 py-2 shadow">
                <div class="card-body bg-dark text-white">
                    <div class="d-flex no-gutters align-items-center">
                        <div class="me-3">
                            <div class="text-xs text-info fw-bold text-uppercase mb-1">Roles</div>
                            <div class="h4 mb-0 fw-bold text-gray-300">@Model.TotalRoles</div>
                        </div>
                        <div class="ms-auto">
                            <i class="bi bi-person-badge-fill text-muted" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-warning h-100 py-2 shadow">
                <div class="card-body bg-dark text-white">
                    <div class="d-flex no-gutters align-items-center">
                        <div class="me-3">
                            <div class="text-xs text-warning fw-bold text-uppercase mb-1">Permisos</div>
                            <div class="h4 mb-0 fw-bold text-gray-300">@Model.TotalPermisos</div>
                        </div>
                        <div class="ms-auto">
                            <i class="bi bi-key-fill text-muted" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Access Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow h-100 bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-people-fill me-2 text-primary"></i>Usuarios
                    </h5>
                    <p class="card-text">Gestión de usuarios del sistema.</p>
                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="bi bi-arrow-right me-1"></i>Administrar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow h-100 bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-person-badge-fill me-2 text-success"></i>Roles
                    </h5>
                    <p class="card-text">Gestión de roles y permisos.</p>
                    <a asp-controller="Roles" asp-action="Index" class="btn btn-sm btn-success">
                        <i class="bi bi-arrow-right me-1"></i>Administrar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow h-100 bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-key-fill me-2 text-info"></i>Permisos
                    </h5>
                    <p class="card-text">Gestión de permisos del sistema.</p>
                    <a asp-controller="Permisos" asp-action="Index" class="btn btn-sm btn-info">
                        <i class="bi bi-arrow-right me-1"></i>Administrar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow h-100 bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-gear-fill me-2 text-warning"></i>Configuración
                    </h5>
                    <p class="card-text">Configuración de seguridad.</p>
                    <a asp-controller="Configuracion" asp-action="Seguridad" class="btn btn-sm btn-warning">
                        <i class="bi bi-arrow-right me-1"></i>Administrar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities Tabs -->
    <div class="card shadow mb-4 bg-dark">
        <div class="card-header py-3 bg-dark text-white border-bottom">
            <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active bg-dark text-primary" id="users-tab" data-bs-toggle="tab" data-bs-target="#users-tab-pane" type="button" role="tab" aria-controls="users-tab-pane" aria-selected="true">
                        <i class="bi bi-people-fill me-1"></i>Últimos Usuarios
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link bg-dark text-light" id="login-tab" data-bs-toggle="tab" data-bs-target="#login-tab-pane" type="button" role="tab" aria-controls="login-tab-pane" aria-selected="false">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Últimos Accesos
                    </button>
                </li>
            </ul>
        </div>
        <div class="card-body bg-dark text-white">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="users-tab-pane" role="tabpanel" aria-labelledby="users-tab" tabindex="0">
                    <div class="table-responsive">
                        <table class="table table-hover table-dark">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Nombre</th>
                                    <th>Fecha Registro</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.UltimosUsuariosRegistrados != null && Model.UltimosUsuariosRegistrados.Any())
                                {
                                    foreach (var usuario in Model.UltimosUsuariosRegistrados)
                                    {
                                        <tr>
                                            <td>@usuario.NombreUsuario</td>
                                            <td>@usuario.NombreCompleto</td>
                                            <td>@usuario.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <a asp-controller="Usuarios" asp-action="Details" asp-route-id="@usuario.UsuarioID" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye me-1"></i>Ver
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No hay usuarios registrados recientemente.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="login-tab-pane" role="tabpanel" aria-labelledby="login-tab" tabindex="0">
                    <div class="table-responsive">
                        <table class="table table-hover table-dark">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Nombre</th>
                                    <th>Último Acceso</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.UltimosAccesos != null && Model.UltimosAccesos.Any())
                                {
                                    foreach (var usuario in Model.UltimosAccesos)
                                    {
                                        <tr>
                                            <td>@usuario.NombreUsuario</td>
                                            <td>@usuario.NombreCompleto</td>
                                            <td>@usuario.UltimoAcceso?.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <a asp-controller="Usuarios" asp-action="Details" asp-route-id="@usuario.UsuarioID" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye me-1"></i>Ver
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No hay registros de acceso recientes.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>