@model IEnumerable<Javo2.ViewModels.Operaciones.Ventas.VentaListViewModel>
@{
    ViewBag.Title = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <!-- Encabezado sin acciones -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">@ViewBag.Title</h1>
    </div>

    <!-- Resumen de Ventas -->
    <div class="summary-cards mb-4" role="region" aria-label="Resumen de Ventas">
        <div class="summary-card">
            <h5>Total Ventas</h5>
            <p class="display-6">@Model.Count()</p>
        </div>
        <div class="summary-card summary-click" onclick="location.href='@Url.Action("EntregaProductos")'" style="cursor:pointer;">
            <h5>Pendientes Entrega</h5>
            <p class="display-6">@Model.Count(v => v.Estado == "PendienteDeEntrega")</p>
            <small>Click para gestionar</small>
        </div>
        <div class="summary-card">
            <h5>Total Facturado</h5>
            <p class="display-6">@Model.Sum(v => v.PrecioTotal).ToString("C")</p>
        </div>
    </div>

    <!-- Filtros y exportación -->
    <div class="card mb-4 shadow-sm bg-dark text-light p-3">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label for="FechaInicio" class="form-label text-light">Desde</label>
                <input type="date" id="FechaInicio" name="FechaInicio" form="ventasFilterForm" class="form-control bg-secondary text-light" value="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label for="FechaFin" class="form-label text-light">Hasta</label>
                <input type="date" id="FechaFin" name="FechaFin" form="ventasFilterForm" class="form-control bg-secondary text-light" value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label for="NombreCliente" class="form-label text-light">Cliente</label>
                <input type="text" id="NombreCliente" name="NombreCliente" form="ventasFilterForm" class="form-control bg-secondary text-light" placeholder="Cliente" value="@ViewBag.NombreCliente" />
            </div>
            <div class="col-md-3 d-grid">
                <button type="submit" form="ventasFilterForm" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i>Buscar
                </button>
            </div>
            <form id="ventasFilterForm" method="get" asp-action="Index" class="d-none">
            </form>
        </div>
    </div>

    <!-- Tabla con acciones integradas -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">Listado de Ventas</h5>
                <div class="btn-group">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle me-1" aria-hidden="true"></i> Nueva Venta
                    </a>
                    <a asp-controller="Cotizaciones" asp-action="Create" class="btn btn-info btn-sm">
                        <i class="bi bi-receipt me-1"></i> Nueva Cotización
                    </a>
                    <a asp-action="ExportToExcel" class="btn btn-outline-light btn-sm"
                       asp-route-fechaInicio="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")"
                       asp-route-fechaFin="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")"
                       asp-route-nombreCliente="@ViewBag.NombreCliente"
                       asp-route-numeroFactura="@ViewBag.NumeroFactura">
                        <i class="bi bi-file-earmark-excel me-1" aria-hidden="true"></i> Exportar
                    </a>
                    @if (Model.Any(v => v.Estado == "PendienteDeEntrega"))
                    {
                        <a asp-action="EntregaProductos" class="btn btn-warning btn-sm">
                            <i class="bi bi-truck me-1"></i> Entregar (@Model.Count(v => v.Estado == "PendienteDeEntrega"))
                        </a>
                    }
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-dark table-striped align-middle mb-0">
                    <thead class="bg-secondary text-light">
                        <tr>
                            <th>Fecha</th>
                            <th>Factura</th>
                            <th>Cliente</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var venta in Model)
                        {
                            <tr>
                                <td>@venta.FechaVenta.ToString("dd/MM/yyyy")</td>
                                <td>@venta.NumeroFactura</td>
                                <td>@venta.NombreCliente</td>
                                <td>@venta.PrecioTotal.ToString("C")</td>
                                <td>
                                    @switch (venta.Estado)
                                    {
                                        case "Borrador":
                                            <span class="badge bg-secondary">Borrador</span>
                                            ; break;
                                        case "PendienteDeEntrega":
                                            <span class="badge bg-info text-dark">Pendiente</span>
                                            ; break;
                                        case "Autorizada":
                                            <span class="badge bg-success">Autorizada</span>
                                            ; break;
                                        case "Rechazada":
                                            <span class="badge bg-danger">Rechazada</span>
                                            ; break;
                                        case "Completada":
                                            <span class="badge bg-primary">Completada</span>
                                            ; break;
                                        default:
                                            <span class="badge bg-secondary">@venta.Estado</span>
                                            ; break;
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group" aria-label="Acciones venta">
                                        <a asp-action="Details" asp-route-id="@venta.VentaID" class="btn btn-sm btn-outline-info" title="Detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @* otras acciones según estado *@
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/debug-helper.js" defer></script>
    <script src="~/js/ventas.js" defer></script>
}
