@model Javo2.ViewModels.Operaciones.Ventas.VentasIndexViewModel
@{
    ViewBag.Title = "Ventas y Cotizaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <!-- Encabezado sin acciones -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">@ViewBag.Title</h1>
    </div>

    <!-- Pestañas de navegación -->
    <ul class="nav nav-tabs mb-4" id="ventasTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link @(ViewBag.ActiveTab == "ventas" ? "active" : "")" id="ventas-tab"
                    data-bs-toggle="tab" data-bs-target="#ventas" type="button" role="tab"
                    aria-controls="ventas" aria-selected="@(ViewBag.ActiveTab == "ventas")">
                <i class="bi bi-cart-fill me-1"></i>Ventas
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(ViewBag.ActiveTab == "cotizaciones" ? "active" : "")" id="cotizaciones-tab"
                    data-bs-toggle="tab" data-bs-target="#cotizaciones" type="button" role="tab"
                    aria-controls="cotizaciones" aria-selected="@(ViewBag.ActiveTab == "cotizaciones")">
                <i class="bi bi-receipt me-1"></i>Cotizaciones
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link @(ViewBag.ActiveTab == "devoluciones" ? "active" : "")" id="devoluciones-tab"
                    data-bs-toggle="tab" data-bs-target="#devoluciones" type="button" role="tab"
                    aria-controls="devoluciones" aria-selected="@(ViewBag.ActiveTab == "devoluciones")">
                <i class="bi bi-arrow-counterclockwise me-1"></i>Devoluciones
            </button>
        </li>
    </ul>

    <div class="tab-content">
        <!-- Tab Ventas -->
        <div class="tab-pane fade @(ViewBag.ActiveTab == "ventas" ? "show active" : "")" id="ventas" role="tabpanel" aria-labelledby="ventas-tab">
            <!-- Resumen de Ventas -->
            <div class="summary-cards mb-4" role="region" aria-label="Resumen de Ventas">
                <div class="summary-card">
                    <h5>Total Ventas</h5>
                    <p class="display-6">@Model.Ventas.Count()</p>
                </div>
                <div class="summary-card summary-click" onclick="location.href='@Url.Action("EntregaProductos")'" style="cursor:pointer;">
                    <h5>Pendientes Entrega</h5>
                    <p class="display-6">@Model.Ventas.Count(v => v.Estado == "PendienteDeEntrega")</p>
                    <small>Click para gestionar</small>
                </div>
                <div class="summary-card">
                    <h5>Total Facturado</h5>
                    <p class="display-6">@Model.Ventas.Sum(v => v.PrecioTotal).ToString("C")</p>
                </div>
            </div>

            <!-- Filtros y exportación -->
            <div class="card mb-4 shadow-sm bg-dark text-light p-3">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label for="FechaInicio" class="form-label text-light">Desde</label>
                        <input type="date" id="FechaInicio" name="FechaInicio" form="ventasFilterForm" class="form-control bg-secondary text-light" value="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="FechaFin" class="form-label text-light">Hasta</label>
                        <input type="date" id="FechaFin" name="FechaFin" form="ventasFilterForm" class="form-control bg-secondary text-light" value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="NombreCliente" class="form-label text-light">Cliente</label>
                        <input type="text" id="NombreCliente" name="NombreCliente" form="ventasFilterForm" class="form-control bg-secondary text-light" placeholder="Cliente" value="@ViewBag.NombreCliente" />
                    </div>
                    <div class="col-md-3 d-grid">
                        <button type="submit" form="ventasFilterForm" class="btn btn-primary">
                            <i class="bi bi-search me-1"></i>Buscar
                        </button>
                    </div>
                    <form id="ventasFilterForm" method="get" asp-action="Index" class="d-none">
                        <input type="hidden" name="activeTab" value="ventas" />
                    </form>
                </div>
            </div>

            <!-- Tabla con acciones integradas -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Listado de Ventas</h5>
                        <div class="btn-group">
                            <a asp-action="Create" class="btn btn-success btn-sm">
                                <i class="bi bi-plus-circle me-1" aria-hidden="true"></i> Nueva Venta
                            </a>
                            
                            <a asp-action="ExportToExcel" class="btn btn-outline-light btn-sm"
                               asp-route-fechaInicio="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")"
                               asp-route-fechaFin="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")"
                               asp-route-nombreCliente="@ViewBag.NombreCliente"
                               asp-route-numeroFactura="@ViewBag.NumeroFactura">
                                <i class="bi bi-file-earmark-excel me-1" aria-hidden="true"></i> Exportar
                            </a>
                            @if (Model.Ventas.Any(v => v.Estado == "PendienteDeEntrega"))
                            {
                                <a asp-action="EntregaProductos" class="btn btn-warning btn-sm">
                                    <i class="bi bi-truck me-1"></i> Entregar (@Model.Ventas.Count(v => v.Estado == "PendienteDeEntrega"))
                                </a>
                            }
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-dark table-striped align-middle mb-0">
                            <thead class="bg-secondary text-light">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Factura</th>
                                    <th>Cliente</th>
                                    <th>Total</th>
                                    <th>Estado</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var venta in Model.Ventas)
                                {
                                    <tr>
                                        <td>@venta.FechaVenta.ToString("dd/MM/yyyy")</td>
                                        <td>@venta.NumeroFactura</td>
                                        <td>@venta.NombreCliente</td>
                                        <td>@venta.PrecioTotal.ToString("C")</td>
                                        <td>
                                            @switch (venta.Estado)
                                            {
                                                case "Borrador":
                                                    <span class="badge bg-secondary">Borrador</span>
                                                    break;
                                                case "PendienteDeEntrega":
                                                    <span class="badge bg-info text-dark">Pendiente</span>
                                                    break;
                                                case "Autorizada":
                                                    <span class="badge bg-success">Autorizada</span>
                                                    break;
                                                case "Rechazada":
                                                    <span class="badge bg-danger">Rechazada</span>
                                                    break;
                                                case "Completada":
                                                    <span class="badge bg-primary">Completada</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@venta.Estado</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group" aria-label="Acciones venta">
                                                <a asp-action="Details" asp-route-id="@venta.VentaID" class="btn btn-sm btn-outline-info" title="Detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab Cotizaciones -->
        <div class="tab-pane fade @(ViewBag.ActiveTab == "cotizaciones" ? "show active" : "")" id="cotizaciones" role="tabpanel" aria-labelledby="cotizaciones-tab">
            <!-- Resumen de Cotizaciones -->
            <div class="summary-cards mb-4">
                <div class="summary-card">
                    <h5>Total Cotizaciones</h5>
                    <p class="display-6">@Model.Cotizaciones.Count()</p>
                </div>
                <div class="summary-card">
                    <h5>Cotizaciones Vigentes</h5>
                    <p class="display-6">@Model.Cotizaciones.Count(c => c.Vigente)</p>
                </div>
                <div class="summary-card">
                    <h5>Valor Total</h5>
                    <p class="display-6">@Model.Cotizaciones.Sum(c => c.PrecioTotal).ToString("C")</p>
                </div>
            </div>

            <!-- Filtros -->
            <div class="card mb-4 shadow-sm bg-dark text-light p-3">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label for="FechaInicioCot" class="form-label text-light">Desde</label>
                        <input type="date" id="FechaInicioCot" name="FechaInicio" form="cotizacionFilterForm" class="form-control bg-secondary text-light" value="@ViewBag.FechaInicioCot?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="FechaFinCot" class="form-label text-light">Hasta</label>
                        <input type="date" id="FechaFinCot" name="FechaFin" form="cotizacionFilterForm" class="form-control bg-secondary text-light" value="@ViewBag.FechaFinCot?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="NombreClienteCot" class="form-label text-light">Cliente</label>
                        <input type="text" id="NombreClienteCot" name="NombreCliente" form="cotizacionFilterForm" class="form-control bg-secondary text-light" placeholder="Cliente" value="@ViewBag.NombreClienteCot" />
                    </div>
                    <div class="col-md-3 d-grid">
                        <button type="submit" form="cotizacionFilterForm" class="btn btn-primary">
                            <i class="bi bi-search me-1"></i>Buscar
                        </button>
                    </div>
                    <form id="cotizacionFilterForm" method="get" asp-controller="Cotizaciones" asp-action="Filter" class="d-none">
                        <input type="hidden" name="activeTab" value="cotizaciones" />
                    </form>
                </div>
            </div>

            <!-- Tabla de Cotizaciones -->
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Listado de Cotizaciones</h5>
                    <
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-dark table-striped mb-0 align-middle">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Número</th>
                                    <th>Cliente</th>
                                    <th>Productos</th>
                                    <th>Total</th>
                                    <th>Vigencia</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Cotizaciones.Any())
                                {
                                    @foreach (var item in Model.Cotizaciones)
                                    {
                                        <tr>
                                            <td>@item.FechaCotizacion.ToString("dd/MM/yyyy")</td>
                                            <td>@item.NumeroCotizacion</td>
                                            <td>@item.NombreCliente</td>
                                            <td>@item.TotalProductos</td>
                                            <td>@item.PrecioTotal.ToString("C")</td>
                                            <td>
                                                @if (item.Vigente)
                                                {
                                                    <span class="badge bg-success">Vigente</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Vencida</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group">
                                                    <a asp-controller="Cotizaciones" asp-action="Details" asp-route-id="@item.CotizacionID"
                                                       class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-controller="Cotizaciones" asp-action="ConvertToVenta" asp-route-id="@item.CotizacionID"
                                                       class="btn btn-sm btn-outline-success" title="Convertir a Venta">
                                                        <i class="bi bi-cart-check"></i>
                                                    </a>
                                                    <a asp-controller="Cotizaciones" asp-action="Delete" asp-route-id="@item.CotizacionID"
                                                       class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-3">
                                            <p class="text-muted mb-0">No hay cotizaciones disponibles</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab Devoluciones -->
        <div class="tab-pane fade @(ViewBag.ActiveTab == "devoluciones" ? "show active" : "")" id="devoluciones" role="tabpanel" aria-labelledby="devoluciones-tab">
            <!-- Resumen de Devoluciones -->
            <div class="summary-cards mb-4" role="region" aria-label="Resumen de Devoluciones">
                <div class="summary-card">
                    <h5>Total Casos</h5>
                    <p class="display-6">@Model.Devoluciones.Count()</p>
                </div>
                <div class="summary-card">
                    <h5>Pendientes</h5>
                    <p class="display-6">@Model.Devoluciones.Count(d => d.Estado == Javo2.Models.EstadoCaso.Pendiente)</p>
                </div>
                <div class="summary-card">
                    <h5>En Proceso</h5>
                    <p class="display-6">@Model.Devoluciones.Count(d => d.Estado == Javo2.Models.EstadoCaso.EnProceso)</p>
                </div>
                <div class="summary-card">
                    <h5>Completados</h5>
                    <p class="display-6">@Model.Devoluciones.Count(d => d.Estado == Javo2.Models.EstadoCaso.Completado)</p>
                </div>
            </div>

            <!-- Tabla de devoluciones -->
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Listado de Devoluciones y Garantías</h5>
                    <a asp-controller="DevolucionGarantia" asp-action="Create" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle me-1"></i> Registrar Nuevo Caso
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover table-striped align-middle mb-0">
                            <thead class="bg-secondary text-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Tipo</th>
                                    <th>Cliente</th>
                                    <th>Factura</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                    <th>Productos</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Devoluciones.Any())
                                {
                                    @foreach (var item in Model.Devoluciones)
                                    {
                                        <tr>
                                            <td>@item.DevolucionGarantiaID</td>
                                            <td>
                                                @switch (item.TipoCaso)
                                                {
                                                    case Javo2.Models.TipoCaso.Devolucion:
                                                        <span class="badge bg-info">Devolución</span>
                                                        break;
                                                    case Javo2.Models.TipoCaso.Cambio:
                                                        <span class="badge bg-primary">Cambio</span>
                                                        break;
                                                    case Javo2.Models.TipoCaso.Garantia:
                                                        <span class="badge bg-warning text-dark">Garantía</span>
                                                        break;
                                                    case Javo2.Models.TipoCaso.Reparacion:
                                                        <span class="badge bg-secondary">Reparación</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@item.NombreCliente</td>
                                            <td>@item.NumeroFactura</td>
                                            <td>@item.FechaSolicitud.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @switch (item.Estado)
                                                {
                                                    case Javo2.Models.EstadoCaso.Pendiente:
                                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                                        break;
                                                    case Javo2.Models.EstadoCaso.EnProceso:
                                                        <span class="badge bg-primary">En Proceso</span>
                                                        break;
                                                    case Javo2.Models.EstadoCaso.Completado:
                                                        <span class="badge bg-success">Completado</span>
                                                        break;
                                                    case Javo2.Models.EstadoCaso.Rechazado:
                                                        <span class="badge bg-danger">Rechazado</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@item.CantidadProductos</td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="DevolucionGarantia" asp-action="Details" asp-route-id="@item.DevolucionGarantiaID"
                                                       class="btn btn-sm btn-outline-info" title="Ver detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    @if (item.Estado == Javo2.Models.EstadoCaso.Pendiente)
                                                    {
                                                        <a asp-controller="DevolucionGarantia" asp-action="Edit" asp-route-id="@item.DevolucionGarantiaID"
                                                           class="btn btn-sm btn-outline-warning" title="Editar">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </a>
                                                    }
                                                    @if (item.Estado == Javo2.Models.EstadoCaso.EnProceso &&
                                                                                                item.TipoCaso == Javo2.Models.TipoCaso.Garantia)
                                                    {
                                                        <a asp-controller="DevolucionGarantia" asp-action="CompletarGarantia" asp-route-id="@item.DevolucionGarantiaID"
                                                           class="btn btn-sm btn-outline-success" title="Completar Garantía">
                                                            <i class="bi bi-check-circle"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center">No hay registros para mostrar</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Mantener la pestaña activa al recargar la página
        $(document).ready(function() {
            // Recuperar pestaña activa de la URL o usar el valor por defecto
            const urlParams = new URLSearchParams(window.location.search);
            const activeTab = urlParams.get('activeTab') || 'ventas';

            // Activar la pestaña correspondiente
            if (activeTab === 'cotizaciones') {
                $('#cotizaciones-tab').tab('show');
            } else if (activeTab === 'devoluciones') {
                $('#devoluciones-tab').tab('show');
            }

            // Guardar la pestaña activa cuando cambia
            $('button[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                const tabId = $(e.target).attr('id');
                if (tabId === 'cotizaciones-tab') {
                    history.replaceState(null, null, '?activeTab=cotizaciones');
                } else if (tabId === 'devoluciones-tab') {
                    history.replaceState(null, null, '?activeTab=devoluciones');
                } else {
                    history.replaceState(null, null, '?activeTab=ventas');
                }
            });
        });
    </script>
    <script src="~/js/ventas-controller.js" defer></script>
    <script src="~/js/modules/cotizacion-form.js" defer></script>
    <script src="~/js/modules/devolucion-form.js" defer></script>
}