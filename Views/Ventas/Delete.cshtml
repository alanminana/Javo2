@using Javo2.ViewModels.Operaciones.Ventas
@model VentaListViewModel

<h1>Eliminar Venta</h1>

<h3>¿Está seguro que desea eliminar esta venta?</h3>

<div>
    <h4>Venta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.FechaVenta.ToShortDateString()</dd>

        <dt class="col-sm-2">Factura</dt>
        <dd class="col-sm-10">@Model.NumeroFactura</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.NombreCliente</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.PrecioTotal</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="VentaID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
