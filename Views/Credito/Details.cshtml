@model Javo2.ViewModels.Operaciones.Ventas.VentaCreditoViewModel
@{
    ViewData["Title"] = "Detalles del Crédito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Volver
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card bg-dark text-light">
                <div class="card-header">
                    <h5 class="mb-0">Información del Crédito</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Factura</dt>
                        <dd class="col-sm-8">@Model.NumeroFactura</dd>

                        <dt class="col-sm-4">Cliente</dt>
                        <dd class="col-sm-8">@Model.ClienteNombre</dd>

                        <dt class="col-sm-4">Monto Total</dt>
                        <dd class="col-sm-8">@Model.MontoTotal.ToString("C")</dd>

                        <dt class="col-sm-4">Score</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.ScoreCliente == "A" ? "bg-success" : Model.ScoreCliente == "B" ? "bg-primary" : Model.ScoreCliente == "C" ? "bg-warning text-dark" : "bg-danger")">
                                @Model.ScoreCliente
                            </span>
                        </dd>

                        <dt class="col-sm-4">Cuotas</dt>
                        <dd class="col-sm-8">@Model.NumeroCuotas</dd>

                        <dt class="col-sm-4">Requiere Garante</dt>
                        <dd class="col-sm-8">
                            @if (Model.RequiereGarante)
                            {
                                <span class="badge @(Model.TieneGarante ? "bg-success" : "bg-danger")">
                                    @(Model.TieneGarante ? "Asignado" : "Requerido")
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-info">No Requerido</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</section>