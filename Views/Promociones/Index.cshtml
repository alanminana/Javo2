@model IEnumerable<Javo2.ViewModels.Operaciones.Promociones.PromocionViewModel>

@{
    ViewBag.Title = "Promociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Promociones</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle me-2"></i> Crear Promoción
</a>

<div class="card p-3">
    <div class="table-responsive">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Porcentaje</th>
                    <th>Tipo</th>
                    <th>Activa</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var promo in Model)
                {
                    <tr>
                        <td>@promo.Nombre</td>
                        <td>@promo.Porcentaje @((promo.EsAumento ? "% Aumento" : "% Descuento"))</td>
                        <td>@(promo.EsAumento ? "Aumento" : "Descuento")</td>
                        <td>@(promo.Activa ? "Sí" : "No")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@promo.PromocionID" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@promo.PromocionID" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
