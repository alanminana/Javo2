@model Javo2.ViewModels.Operaciones.Clientes.ClientesViewModel

@{
    ViewBag.Title = "Detalles del Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewBag.Title</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.ClienteID</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

      

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">
            @if (Model.Activo)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </dd>
    </dl>
</div>

<!-- Botones de Acción -->
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ClienteID" class="btn btn-primary me-2">
        <i class="bi bi-pencil-square me-2"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i> Volver al Listado
    </a>
</div>
