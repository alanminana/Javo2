@model Javo2.ViewModels.Operaciones.Promociones.PromocionViewModel

@{
    ViewBag.Title = "Eliminar Promoción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewBag.Title</h2>

<div class="alert alert-danger">
    <h4 class="alert-heading">¿Estás seguro de eliminar esta promoción?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">ID de la Promoción</dt>
        <dd class="col-sm-9">@Model.PromocionID</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>
    </dl>

    <form asp-action="DeletePromocion" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PromocionID" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash me-2"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle me-2"></i> Cancelar
        </a>
    </form>
</div>
