@model Javo2.ViewModels.Authentication.UsuarioFormViewModel
@{
    ViewData["Title"] = Model.EsEdicion ? "Editar Usuario" : "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="card shadow-sm bg-dark text-light">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="h4 mb-0">@ViewData["Title"]</h2>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver al listado
            </a>
        </div>
        <div class="card-body">
            <form asp-action="@(Model.EsEdicion ? "Edit" : "Create")" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                @if (Model.EsEdicion)
                {
                    <input type="hidden" asp-for="Usuario.UsuarioID" />
                }

                <!-- Datos del Usuario -->
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Usuario.NombreUsuario" class="form-label">Nombre de Usuario</label>
                        @if (Model.EsEdicion)
                        {
                            <input asp-for="Usuario.NombreUsuario" class="form-control bg-secondary text-light" readonly />
                        }
                        else
                        {
                            <input asp-for="Usuario.NombreUsuario" class="form-control bg-secondary text-light" />
                        }
                        <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Usuario.Email" class="form-label">Email</label>
                        <input asp-for="Usuario.Email" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="Usuario.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <label asp-for="Usuario.Nombre" class="form-label">Nombre</label>
                        <input asp-for="Usuario.Nombre" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Usuario.Apellido" class="form-label">Apellido</label>
                        <input asp-for="Usuario.Apellido" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="Usuario.Apellido" class="text-danger"></span>
                    </div>
                </div>

                @if (!Model.EsEdicion || (Model.EsEdicion && !string.IsNullOrEmpty(Model.Contraseña)))
                {
                    <div class="row g-3 mt-3">
                        <div class="col-md-6">
                            <label asp-for="Contraseña" class="form-label">Contraseña</label>
                            <input asp-for="Contraseña" type="password" class="form-control bg-secondary text-light" />
                            <span asp-validation-for="Contraseña" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ConfirmarContraseña" class="form-label">Confirmar Contraseña</label>
                            <input asp-for="ConfirmarContraseña" type="password" class="form-control bg-secondary text-light" />
                            <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row g-3 mt-3">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                Deje los campos de contraseña en blanco si no desea cambiarla
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Contraseña" class="form-label">Nueva Contraseña (opcional)</label>
                            <input asp-for="Contraseña" type="password" class="form-control bg-secondary text-light" />
                            <span asp-validation-for="Contraseña" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ConfirmarContraseña" class="form-label">Confirmar Contraseña</label>
                            <input asp-for="ConfirmarContraseña" type="password" class="form-control bg-secondary text-light" />
                            <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
                        </div>
                    </div>
                }

                <div class="row g-3 mt-3">
                    <div class="col-md-12">
                        <div class="form-check form-switch">
                            <input asp-for="Usuario.Activo" class="form-check-input" />
                            <label asp-for="Usuario.Activo" class="form-check-label">Usuario Activo</label>
                        </div>
                    </div>
                </div>

                <!-- Roles -->
                <div class="mt-4">
                    <h5 class="border-bottom pb-2">Roles</h5>
                    <div class="row">
                        @foreach (var rol in Model.RolesDisponibles)
                        {
                            bool isChecked = Model.RolesSeleccionados.Contains(int.Parse(rol.Value));
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    @if (isChecked)
                                    {
                                        <input type="checkbox" name="RolesSeleccionados" value="@rol.Value"
                                               id="rol_@rol.Value" class="form-check-input" checked />
                                    }
                                    else
                                    {
                                        <input type="checkbox" name="RolesSeleccionados" value="@rol.Value"
                                               id="rol_@rol.Value" class="form-check-input" />
                                    }
                                    <label for="rol_@rol.Value" class="form-check-label">@rol.Text</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}