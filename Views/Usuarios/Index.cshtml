@model IEnumerable<Javo2.Models.Authentication.Usuario>
@{
    ViewData["EntityName"] = "Usuarios";
    ViewData["CreateAction"] = "Create";
    ViewData["CreatePermission"] = "usuarios.crear";
    Layout = "~/Views/Shared/_EntityTable.cshtml";
}

@section Filters {
    <form class="row g-3">
        <div class="col-md-4">
            <input type="text" name="search" class="form-control bg-secondary text-light" placeholder="Buscar usuario..." />
        </div>
        <div class="col-md-3">
            <select name="estado" class="form-select bg-secondary text-light">
                <option value="">Todos</option>
                <option value="true">Activos</option>
                <option value="false">Inactivos</option>
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search me-1"></i>Filtrar
            </button>
        </div>
    </form>
}

<table class="table table-hover table-dark align-middle mb-0">
    <thead class="bg-secondary text-light">
        <tr>
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Estado</th>
            <th>Último acceso</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreUsuario</td>
                <td>@item.Nombre @item.Apellido</td>
                <td>@item.Email</td>
                <td><span class="small">@item.Roles.Count roles</span></td>
                <td>
                    <span class="badge @(item.Activo ? "bg-success" : "bg-danger")">
                        @(item.Activo ? "Activo" : "Inactivo")
                    </span>
                </td>
                <td>@(item.UltimoAcceso?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</td>
                <td class="text-center">
                    @await Html.PartialAsync("_ActionButtons", (item.UsuarioID, "Usuarios", "", "", ""))
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/modules/usuarios-permisos.js"></script>
}