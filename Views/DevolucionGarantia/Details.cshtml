@model Javo2.ViewModels.Operaciones.DevolucionGarantia.DevolucionGarantiaViewModel
@{
    ViewBag.Title = $"{Model.TipoCaso} - Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0">@ViewBag.Title #@Model.DevolucionGarantiaID</h2>
                    <div>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                        @if (Model.Estado == Javo2.Models.EstadoCaso.Pendiente)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.DevolucionGarantiaID" class="btn btn-outline-warning btn-sm ms-2">
                                <i class="bi bi-pencil-square me-1"></i> Editar
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <!-- Alerts para mensajes -->
                    @await Html.PartialAsync("_Alerts")


                    <!-- Estado actual -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4>
                                Estado:
                                <span class="badge @(Model.Estado == Javo2.Models.EstadoCaso.Pendiente ? "bg-warning text-dark" :
                                                    Model.Estado == Javo2.Models.EstadoCaso.EnProceso ? "bg-primary" :
                                                    Model.Estado == Javo2.Models.EstadoCaso.Completado ? "bg-success" : "bg-danger")">
                                    @Model.Estado
                                </span>
                            </h4>
                            @if (Model.Estado == Javo2.Models.EstadoCaso.Pendiente)
                            {
                                <form asp-action="Procesar" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.DevolucionGarantiaID" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle me-1"></i> Procesar @Model.TipoCaso
                                    </button>
                                </form>
                            }
                            @if (Model.Estado == Javo2.Models.EstadoCaso.EnProceso && Model.TipoCaso == Javo2.Models.TipoCaso.Garantia)
                            {
                                <a asp-action="CompletarGarantia" asp-route-id="@Model.DevolucionGarantiaID" class="btn btn-success">
                                    <i class="bi bi-check-circle me-1"></i> Completar Garantía
                                </a>
                            }
                        </div>
                    </div>

                    <!-- Información General -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-secondary">
                                <div class="card-header">
                                    <h5 class="mb-0">Información General</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Tipo:</dt>
                                        <dd class="col-sm-8">@Model.TipoCaso</dd>

                                        <dt class="col-sm-4">Fecha Solicitud:</dt>
                                        <dd class="col-sm-8">@Model.FechaSolicitud.ToString("dd/MM/yyyy")</dd>

                                        <dt class="col-sm-4">Cliente:</dt>
                                        <dd class="col-sm-8">@Model.NombreCliente</dd>

                                        <dt class="col-sm-4">Factura:</dt>
                                        <dd class="col-sm-8">@Model.NumeroFactura</dd>

                                        <dt class="col-sm-4">Fecha Venta:</dt>
                                        <dd class="col-sm-8">@Model.FechaVenta.ToString("dd/MM/yyyy")</dd>

                                        <dt class="col-sm-4">Motivo:</dt>
                                        <dd class="col-sm-8">@Model.Motivo</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-secondary">
                                <div class="card-header">
                                    <h5 class="mb-0">Descripción y Estado</h5>
                                </div>
                                <div class="card-body">
                                    <p class="mb-3">@Model.Descripcion</p>

                                    @if (!string.IsNullOrEmpty(Model.Comentarios))
                                    {
                                        <hr />
                                        <h6>Comentarios:</h6>
                                        <p class="mb-0">@Model.Comentarios</p>
                                    }

                                    @if (Model.FechaResolucion.HasValue)
                                    {
                                        <hr />
                                        <p class="mb-0">
                                            <strong>Fecha de Resolución:</strong> @Model.FechaResolucion.Value.ToString("dd/MM/yyyy HH:mm")
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Productos -->
                    <div class="card bg-secondary mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Productos</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-dark table-striped mb-0">
                                    <thead>
                                        <tr>
                                            <th>Producto</th>
                                            <th>Cantidad</th>
                                            <th>Precio Unit.</th>
                                            <th>Subtotal</th>
                                            <th>Estado</th>
                                            <th>¿Dañado?</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td>@item.NombreProducto</td>
                                                <td>@item.Cantidad</td>
                                                <td>@item.PrecioUnitario.ToString("C")</td>
                                                <td>@item.Subtotal.ToString("C")</td>
                                                <td>@item.EstadoProducto</td>
                                                <td>
                                                    @if (item.ProductoDanado)
                                                    {
                                                        <span class="badge bg-danger">Sí</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">No</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                            <td colspan="3"><strong>@Model.Items.Sum(i => i.Subtotal).ToString("C")</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Productos de Cambio (si aplica) -->
                    @if (Model.TipoCaso == Javo2.Models.TipoCaso.Cambio && Model.CambiosProducto != null && Model.CambiosProducto.Any())
                    {
                        <div class="card bg-secondary mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Productos de Cambio</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-dark table-striped mb-0">
                                        <thead>
                                            <tr>
                                                <th>Producto Original</th>
                                                <th>Producto Nuevo</th>
                                                <th>Cantidad</th>
                                                <th>Diferencia</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var cambio in Model.CambiosProducto)
                                            {
                                                <tr>
                                                    <td>@cambio.NombreProductoOriginal</td>
                                                    <td>@cambio.NombreProductoNuevo</td>
                                                    <td>@cambio.Cantidad</td>
                                                    <td>
                                                        @if (cambio.DiferenciaPrecio > 0)
                                                        {
                                                            <span class="text-danger">+@cambio.DiferenciaPrecio.ToString("C")</span>
                                                        }
                                                        else if (cambio.DiferenciaPrecio < 0)
                                                        {
                                                            <span class="text-success">@cambio.DiferenciaPrecio.ToString("C")</span>
                                                        }
                                                        else
                                                        {
                                                            <span>@cambio.DiferenciaPrecio.ToString("C")</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="3" class="text-end"><strong>Diferencia Total:</strong></td>
                                                <td>
                                                    @{
                                                        var difTotal = Model.CambiosProducto.Sum(c => c.DiferenciaPrecio);
                                                        var cssClass = difTotal > 0 ? "text-danger" : (difTotal < 0 ? "text-success" : "");
                                                    }
                                                    <strong class="@cssClass">@difTotal.ToString("C")</strong>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/modules/devolucion-form.js"></script>

    }

}