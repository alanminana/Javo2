@model Javo2.ViewModels.Operaciones.DevolucionGarantia.DevolucionGarantiaViewModel
@inject Javo2.IServices.IVentaService VentaService
@inject Javo2.IServices.IProductoService ProductoService

@{
    var isEdit = Model.DevolucionGarantiaID > 0;
    ViewBag.Title = isEdit ? "Editar Devolución/Garantía" : "Registrar Devolución/Garantía";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="container-fluid py-3">
    <div class="card shadow-sm bg-dark text-light">
        <div class="card-header">
            <h2 class="h5 mb-0">@ViewBag.Title</h2>
        </div>
        <<div class="card-body">
            <form asp-action="@(isEdit ? "Edit" : "Create")" method="post">
                @Html.AntiForgeryToken()
                @if (isEdit)
                {
                    <input type="hidden" asp-for="DevolucionGarantiaID" />
                    @Html.HiddenFor(m => m.DevolucionGarantiaID)
                }

                
                @if (!isEdit)
                {
                    <div id="paso1" class="mb-4">
                        <h4>Paso 1: Buscar Venta</h4>
                        <div class="input-group mb-3">
                            <input type="text" id="buscarVenta" class="form-control" placeholder="Número de Factura" />
                            <button type="button" id="btnBuscarVenta" class="btn btn-primary">Buscar</button>
                        </div>
                        <div id="errorBusqueda" class="text-danger d-none"></div>
                    </div>
                }

                <div id="formFields" class="@(isEdit ? "" : "d-none")">
                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label asp-for="NumeroFactura" class="form-label">Factura</label>
                            <input asp-for="NumeroFactura" class="form-control" readonly />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="NombreCliente" class="form-label">Cliente</label>
                            <input asp-for="NombreCliente" class="form-control" readonly />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="FechaSolicitud" class="form-label">Fecha</label>
                            <input asp-for="FechaSolicitud" type="date" class="form-control" />
                            <span asp-validation-for="FechaSolicitud" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="table-responsive mb-3">
                        <table class="table table-dark table-hover" id="tablaProductos">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" id="selectAllProducts" /></th>
                                    <th>Producto</th>
                                    <th>Cant.</th>
                                    <th>Precio</th>
                                    <th>Subtotal</th>
                                    <th>Estado</th>
                                    <th>¿Dañado?</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <div id="errorProductos" class="text-danger d-none">Debe seleccionar al menos un producto</div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="TipoCaso" class="form-label">Tipo de Caso</label>
                            <select asp-for="TipoCaso" asp-items="Model.TiposCaso" class="form-select" id="TipoCaso">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="TipoCaso" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Motivo" class="form-label">Motivo</label>
                            <select asp-for="Motivo" asp-items="Model.Motivos" class="form-select">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="Motivo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div id="seccionCambio" class="d-none mb-3">
                        <h5>Productos para Cambio</h5>
                        <table class="table table-dark" id="tablaCambios">
                            <thead>
                                <tr>
                                    <th>Original</th>
                                    <th>Nuevo</th>
                                    <th>Cant.</th>
                                    <th>ΔPrecio</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">@(isEdit ? "Actualizar" : "Guardar")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/modules/devolucion-form.js"></script>

    }

}