@model Javo2.ViewModels.Operaciones.Catalogo.RubroViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Eliminar Rubro";
}

<h2 class="mb-4">@ViewBag.Title</h2>

@await Html.PartialAsync("_ConfirmDelete", $"Rubro: {Model.Nombre}")

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>
    </dl>

    <form asp-action="DeleteRubro" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash me-1"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle me-1"></i> Cancelar
        </a>
    </form>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/modules/catalogo.js" asp-append-version="true"></script>
}