@using Javo2.ViewModels.Operaciones.Catalogo
@model EditSubRubrosViewModel
@{
    ViewBag.Title = "Editar SubRubros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-light">
                    <h2 class="h5 mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    <form asp-action="EditSubRubros" method="post" id="editSubRubrosForm" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="RubroID" />

                        <!-- Nombre de Rubro -->
                        <div class="mb-4">
                            <label asp-for="RubroNombre" class="form-label text-light"></label>
                            <input asp-for="RubroNombre" class="form-control bg-secondary text-light" readonly />
                        </div>

                        <!-- SubRubros Existentes -->
                        <div class="mb-4">
                            <h5 class="text-light mb-3">SubRubros Existentes</h5>
                            <div class="table-responsive">
                                <table class="table table-dark table-hover mb-0" id="subRubrosTable">
                                    <thead>
                                        <tr>
                                            <th scope="col">Subrubro</th>
                                            <th scope="col" class="text-center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.SubRubros.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="hidden" asp-for="SubRubros[i].ID" />
                                                    <input asp-for="SubRubros[i].Nombre" class="form-control bg-secondary text-light" />
                                                    <span asp-validation-for="SubRubros[i].Nombre" class="invalid-feedback d-block"></span>
                                                </td>
                                                <td class="text-center align-middle">
                                                    <button type="button" class="btn btn-sm btn-outline-danger delete-subrubro" title="Eliminar este subrubro">
                                                        <i class="bi bi-trash" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Eliminar</span>
                                                    </button>
                                                    <input type="hidden" asp-for="SubRubros[i].IsDeleted" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Agregar Nuevo SubRubro -->
                        <div class="mb-4">
                            <h5 class="text-light mb-3">Agregar Nuevo SubRubro</h5>
                            <div class="input-group">
                                <input type="text"
                                       id="newSubRubro"
                                       class="form-control bg-secondary text-light"
                                       placeholder="Nombre del subrubro"
                                       aria-label="Nuevo SubRubro" />
                                <button type="button" id="addSubRubro" class="btn btn-success" title="Agregar nuevo subrubro">
                                    <i class="bi bi-plus-lg" aria-hidden="true"></i>
                                    <span class="visually-hidden">Agregar SubRubro</span>
                                </button>
                            </div>
                        </div>

                        <!-- Acciones de formulario -->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save me-1" aria-hidden="true"></i>
                                <span>Guardar</span>
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>
                                <span>Volver</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/modules/catalogo.js" asp-append-version="true"></script>
}