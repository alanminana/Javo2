@model Javo2.Controllers.AjustesTemporalesIndexViewModel
@{
    ViewBag.Title = "Ajustes Temporales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-calendar-week me-1"></i> @ViewBag.Title
                    </h2>
                    <div>
                        <a asp-action="FormTemporal" class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle me-1"></i>Nuevo Ajuste Temporal
                        </a>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm ms-2">
                            <i class="bi bi-arrow-left me-1"></i>Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs mb-4" id="ajustesTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="activos-tab" data-bs-toggle="tab" data-bs-target="#activos-tab-pane" type="button" role="tab" aria-controls="activos-tab-pane" aria-selected="true">
                                <i class="bi bi-check-circle me-1"></i>Activos
                                @if (Model.AjustesActivos.Any())
                                {
                                    <span class="badge bg-success ms-1">@Model.AjustesActivos.Count</span>
                                }
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="programados-tab" data-bs-toggle="tab" data-bs-target="#programados-tab-pane" type="button" role="tab" aria-controls="programados-tab-pane" aria-selected="false">
                                <i class="bi bi-clock me-1"></i>Programados
                                @if (Model.AjustesProgramados.Any())
                                {
                                    <span class="badge bg-warning text-dark ms-1">@Model.AjustesProgramados.Count</span>
                                }
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="finalizados-tab" data-bs-toggle="tab" data-bs-target="#finalizados-tab-pane" type="button" role="tab" aria-controls="finalizados-tab-pane" aria-selected="false">
                                <i class="bi bi-archive me-1"></i>Finalizados
                                @if (Model.AjustesFinalizados.Any())
                                {
                                    <span class="badge bg-secondary ms-1">@Model.AjustesFinalizados.Count</span>
                                }
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content" id="ajustesTabContent">
                        <div class="tab-pane fade show active" id="activos-tab-pane" role="tabpanel" aria-labelledby="activos-tab" tabindex="0">
                            @if (!Model.AjustesActivos.Any())
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-1"></i>No hay ajustes temporales activos en este momento.
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-dark table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tipo</th>
                                                <th>Ajuste</th>
                                                <th>Periodo</th>
                                                <th>Días Restantes</th>
                                                <th class="text-center">Productos</th>
                                                <th class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var ajuste in Model.AjustesActivos)
                                            {
                                                <tr>
                                                    <td>@ajuste.AjusteHistoricoID</td>
                                                    <td>
                                                        <span class="badge bg-primary">@ajuste.TipoAjusteTemporal</span>
                                                    </td>
                                                    <td>
                                                        <span class="@(ajuste.EsAumento ? "text-success" : "text-danger")">
                                                            @(ajuste.EsAumento ? "+" : "-")@ajuste.Porcentaje%
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small>
                                                            @ajuste.FechaInicio?.ToString("dd/MM/yyyy") - @ajuste.FechaFin?.ToString("dd/MM/yyyy")
                                                        </small>
                                                    </td>
                                                    <td>
                                                        <span class="@(ajuste.DiasRestantes <= 1 ? "text-danger" : ajuste.DiasRestantes <= 3 ? "text-warning" : "")">
                                                            @ajuste.DiasRestantes días
                                                        </span>
                                                    </td>
                                                    <td class="text-center">
                                                        @ajuste.Detalles.Count
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group btn-group-sm">
                                                            <a asp-action="DetailsTemporal" asp-route-id="@ajuste.AjusteHistoricoID" class="btn btn-outline-info">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <form asp-action="FinalizarTemporal" asp-route-id="@ajuste.AjusteHistoricoID" method="post" onsubmit="return confirm('¿Está seguro de finalizar este ajuste temporal? Los precios volverán a su valor original.');">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-outline-danger">
                                                                    <i class="bi bi-x-circle"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                        <div class="tab-pane fade" id="programados-tab-pane" role="tabpanel" aria-labelledby="programados-tab" tabindex="0">
                            @if (!Model.AjustesProgramados.Any())
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-1"></i>No hay ajustes temporales programados en este momento.
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-dark table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tipo</th>
                                                <th>Ajuste</th>
                                                <th>Inicia en</th>
                                                <th>Periodo</th>
                                                <th class="text-center">Productos</th>
                                                <th class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var ajuste in Model.AjustesProgramados)
                                            {
                                                var diasParaInicio = ajuste.FechaInicio.HasValue ? (ajuste.FechaInicio.Value - DateTime.Now).Days : 0;

                                                <tr>
                                                    <td>@ajuste.AjusteHistoricoID</td>
                                                    <td>
                                                        <span class="badge bg-primary">@ajuste.TipoAjusteTemporal</span>
                                                    </td>
                                                    <td>
                                                        <span class="@(ajuste.EsAumento ? "text-success" : "text-danger")">
                                                            @(ajuste.EsAumento ? "+" : "-")@ajuste.Porcentaje%
                                                        </span>
                                                    </td>
                                                    <td>
                                                        @diasParaInicio días
                                                    </td>
                                                    <td>
                                                        <small>
                                                            @ajuste.FechaInicio?.ToString("dd/MM/yyyy") - @ajuste.FechaFin?.ToString("dd/MM/yyyy")
                                                        </small>
                                                    </td>
                                                    <td class="text-center">
                                                        @ajuste.Detalles.Count
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group btn-group-sm">
                                                            <a asp-action="DetailsTemporal" asp-route-id="@ajuste.AjusteHistoricoID" class="btn btn-outline-info">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <form asp-action="ActivarTemporal" asp-route-id="@ajuste.AjusteHistoricoID" method="post" onsubmit="return confirm('¿Está seguro de activar este ajuste temporal ahora?');">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-outline-success">
                                                                    <i class="bi bi-play-circle"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                        <div class="tab-pane fade" id="finalizados-tab-pane" role="tabpanel" aria-labelledby="finalizados-tab" tabindex="0">
                            @if (!Model.AjustesFinalizados.Any())
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-1"></i>No hay ajustes temporales finalizados.
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-dark table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tipo</th>
                                                <th>Ajuste</th>
                                                <th>Periodo</th>
                                                <th>Finalizado</th>
                                                <th class="text-center">Productos</th>
                                                <th class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var ajuste in Model.AjustesFinalizados)
                                            {
                                                <tr>
                                                    <td>@ajuste.AjusteHistoricoID</td>
                                                    <td>
                                                        <span class="badge bg-secondary">@ajuste.TipoAjusteTemporal</span>
                                                    </td>
                                                    <td>
                                                        <span class="text-muted">
                                                            @(ajuste.EsAumento ? "+" : "-")@ajuste.Porcentaje%
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small class="text-muted">
                                                            @ajuste.FechaInicio?.ToString("dd/MM/yyyy") - @ajuste.FechaFin?.ToString("dd/MM/yyyy")
                                                        </small>
                                                    </td>
                                                    <td>
                                                        <small>
                                                            @ajuste.FechaReversion?.ToString("dd/MM/yyyy HH:mm")
                                                        </small>
                                                    </td>
                                                    <td class="text-center">
                                                        @ajuste.Detalles.Count
                                                    </td>
                                                    <td class="text-center">
                                                        <a asp-action="DetailsTemporal" asp-route-id="@ajuste.AjusteHistoricoID" class="btn btn-sm btn-outline-secondary">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>