@model Javo2.ViewModels.Operaciones.Productos.AjusteTemporalViewModel
@{
    ViewBag.Title = "Detalles de Ajuste Temporal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-calendar-check me-1"></i> @ViewBag.Title
                    </h2>
                    <a asp-action="IndexTemporales" class="btn btn-sm btn-outline-light">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
                <div class="card-body">
                    <!-- Resumen del Ajuste -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <h3 class="h6 mb-0 me-2">Información General</h3>
                                    <span class="badge @(Model.EstadoTemporal == "Activo" ? "bg-success" : Model.EstadoTemporal == "Programado" ? "bg-warning text-dark" : "bg-secondary")">
                                        @Model.EstadoTemporal
                                    </span>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-sm table-dark table-bordered">
                                        <tr>
                                            <th>ID Ajuste:</th>
                                            <td>@Model.AjusteHistoricoID</td>
                                        </tr>
                                        <tr>
                                            <th>Tipo de Ajuste:</th>
                                            <td>@Model.TipoAjusteTemporal</td>
                                        </tr>
                                        <tr>
                                            <th>Porcentaje:</th>
                                            <td>
                                                <span class="@(Model.EsAumento ? "text-success" : "text-danger")">
                                                    @(Model.EsAumento ? "+" : "-")@Model.Porcentaje%
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Creado por:</th>
                                            <td>@Model.UsuarioAjuste</td>
                                        </tr>
                                        <tr>
                                            <th>Fecha de Creación:</th>
                                            <td>@Model.FechaAjuste.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <th>Descripción:</th>
                                            <td>@(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h3 class="h6 mb-2">Periodo de Vigencia</h3>
                                <div class="table-responsive">
                                    <table class="table table-sm table-dark table-bordered">
                                        <tr>
                                            <th>Fecha de Inicio:</th>
                                            <td>@Model.FechaInicio?.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <th>Fecha de Finalización:</th>
                                            <td>@Model.FechaFin?.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                        <tr>
                                            <th>Duración Total:</th>
                                            <td>@Model.DuracionTotal.Days días</td>
                                        </tr>
                                        @if (Model.EstadoTemporal == "Activo")
                                        {
                                            <tr>
                                                <th>Días Restantes:</th>
                                                <td>
                                                    <span class="@(Model.DiasRestantes <= 1 ? "text-danger" : Model.DiasRestantes <= 3 ? "text-warning" : "")">
                                                        @Model.DiasRestantes días
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Estado y Acciones -->
                    @if (Model.Revertido)
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            Este ajuste fue revertido el @Model.FechaReversion?.ToString("dd/MM/yyyy HH:mm") por @Model.UsuarioReversion
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-center gap-3 mb-4">
                            @if (Model.PuedeActivar)
                            {
                                <form asp-action="ActivarTemporal" asp-route-id="@Model.AjusteHistoricoID" method="post" onsubmit="return confirm('¿Está seguro de activar este ajuste temporal ahora?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-play-circle me-1"></i>Activar Ahora
                                    </button>
                                </form>
                            }

                            @if (Model.PuedeFinalizar)
                            {
                                <form asp-action="FinalizarTemporal" asp-route-id="@Model.AjusteHistoricoID" method="post" onsubmit="return confirm('¿Está seguro de finalizar este ajuste temporal? Los precios volverán a su valor original.');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-stop-circle me-1"></i>Finalizar Ahora
                                    </button>
                                </form>
                            }
                        </div>
                    }

                    <!-- Detalles de Productos -->
                    <div class="card bg-secondary mb-4">
                        <div class="card-header">
                            <h3 class="h6 mb-0">Productos Afectados (@Model.Detalles.Count)</h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-dark table-striped table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Producto</th>
                                            <th colspan="3" class="text-center">Precios Originales</th>
                                            <th colspan="3" class="text-center">Precios Ajustados</th>
                                        </tr>
                                        <tr>
                                            <th></th>
                                            <th>Costo</th>
                                            <th>Contado</th>
                                            <th>Lista</th>
                                            <th>Costo</th>
                                            <th>Contado</th>
                                            <th>Lista</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detalle in Model.Detalles)
                                        {
                                            <tr>
                                                <td>@detalle.NombreProducto</td>
                                                <td>@detalle.PCostoAnterior.ToString("C")</td>
                                                <td>@detalle.PContadoAnterior.ToString("C")</td>
                                                <td>@detalle.PListaAnterior.ToString("C")</td>
                                                <td class="@(Model.EsAumento ? "text-success" : "text-danger")">@detalle.PCostoPosterior.ToString("C")</td>
                                                <td class="@(Model.EsAumento ? "text-success" : "text-danger")">@detalle.PContadoPosterior.ToString("C")</td>
                                                <td class="@(Model.EsAumento ? "text-success" : "text-danger")">@detalle.PListaPosterior.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
 <script src="~/js/ajusteprecios/DetailsTemporal.js"></script>
 }