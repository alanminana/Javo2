@{
    var entityName = ViewData["EntityName"]?.ToString() ?? "Entidad";
    var title = $"Detalles de {entityName}";
    var editAction = ViewData["EditAction"]?.ToString() ?? "Edit";
    var editPermission = ViewData["EditPermission"]?.ToString();
    var entityId = ViewData["EntityId"];
}

<section class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">@title</h1>
        <div>
            @if (!string.IsNullOrEmpty(editPermission))
            {
                <a asp-action="@editAction" asp-route-id="@entityId" class="btn btn-primary btn-sm" require-permission="@editPermission">
                    <i class="bi bi-pencil-square me-1"></i> Editar
                </a>
            }
            else
            {
                <a asp-action="@editAction" asp-route-id="@entityId" class="btn btn-primary btn-sm">
                    <i class="bi bi-pencil-square me-1"></i> Editar
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>

    <div class="card bg-dark text-light shadow-sm">
        <div class="card-body">
            @RenderBody()
        </div>
    </div>
</section>