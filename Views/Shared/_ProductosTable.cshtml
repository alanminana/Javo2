@model IEnumerable<Javo2.ViewModels.Operaciones.Productos.ProductoViewModel>
@foreach (var producto in Model)
{
    <tr>
        <td>
            <div class="form-check">
                <input class="form-check-input producto-check" type="checkbox" value="@producto.ProductoID" />
            </div>
        </td>
        <td>@producto.Nombre</td>
        <td>@producto.PCosto.ToString("C")</td>
        <td>@producto.PContado.ToString("C")</td>
        <td>@producto.PLista.ToString("C")</td>
        <td>@producto.CantidadDisponible</td>
        <td class="text-center">
            <div class="btn-group">
                <a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.ProductoID"
                   class="btn btn-sm btn-outline-primary" title="Editar">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-controller="Productos" asp-action="Details" asp-route-id="@producto.ProductoID"
                   class="btn btn-sm btn-outline-info" title="Detalles">
                    <i class="bi bi-eye"></i>
                </a>
            </div>
        </td>
    </tr>
}