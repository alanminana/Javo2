@{
    var entityName = ViewData["EntityName"]?.ToString() ?? "Entidad";
    var isEdit = ViewData["IsEdit"] as bool? ?? false;
    var formAction = ViewData["FormAction"]?.ToString() ?? (isEdit ? "Edit" : "Create");
    var title = isEdit ? $"Editar {entityName}" : $"Crear {entityName}";
}

<section class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-header">
                    <h2 class="h5 mb-0">@title</h2>
                </div>
                <div class="card-body">
                    <form asp-action="@formAction" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        @RenderBody()
                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save me-1"></i>
                                <span>@(isEdit ? "Actualizar" : "Guardar")</span>
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                <span>Volver</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>