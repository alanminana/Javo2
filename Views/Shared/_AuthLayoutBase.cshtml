@{
    var title = ViewData["Title"]?.ToString() ?? "Autenticación";
    var cardTitle = ViewData["CardTitle"]?.ToString() ?? title;
    var showLogo = ViewData["ShowLogo"] as bool? ?? true;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Javo2</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <style>
        body { background-color: #212529; color: #fff; height: 100vh; display: flex; align-items: center; justify-content: center; }
        .login-container { max-width: 450px; width: 100%; padding: 15px; }
        .footer { position: fixed; bottom: 0; width: 100%; padding: 8px 0; text-align: center; color: #6c757d; font-size: 12px; }
    </style>
</head>
<body>
    <main role="main" class="w-100">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-lg mt-5 bg-dark text-light">
                    @if (showLogo)
                    {
                        <div class="text-center mb-4 p-4">
                            <img src="~/img/logo.png" alt="Javo2 Logo" class="img-fluid mb-3" style="max-width:150px" onerror="this.remove();" />
                            <h1 class="h4 text-light mb-2">@cardTitle</h1>
                        </div>
                    }
                    <div class="card-header @ViewData["HeaderClass"]">
                        <h3 class="text-center font-weight-light my-4">@cardTitle</h3>
                    </div>
                    <div class="card-body">
                        @RenderBody()
                    </div>
                    @if (IsSectionDefined("Footer"))
                    {
                        <div class="card-footer text-center py-3">
                            @RenderSection("Footer", required: false)
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
    <footer class="footer text-muted">
        <div class="container">
            <div class="d-flex align-items-center justify-content-center small">
                <div>Copyright &copy; Javo2 @DateTime.Now.Year</div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html></html>