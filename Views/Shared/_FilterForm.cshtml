@* Archivo: Views/Shared/_FilterForm.cshtml *@
@model Dictionary<string, object>

<div class="card mb-4 p-3">
    <form method="get" class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Campo:</label>
            <select name="FilterField" class="form-select">
                <option value="nombre">Nombre</option>
                <option value="codigo">Código</option>
                <option value="rubro">Rubro</option>
                <!-- etc. -->
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label">Valor:</label>
            <input type="text" name="FilterValue" class="form-control" placeholder="Buscar..." />
        </div>
        <div class="col-md-4 align-self-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-filter me-1"></i> Aplicar
            </button>
            <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        </div>
    </form>
</div>
