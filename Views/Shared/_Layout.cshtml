@* Archivo: Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The BuryCode</title>

    <!-- Bootstrap CSS (v5.3.3) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Chart.js (v4.4.0) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0"></script>

    <!-- jQuery (v3.7.1, opcional) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- jQuery UI (solo si se requiere) -->
    <link rel="stylesheet"
          href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!-- CSS Personalizado (tema oscuro) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-dark text-white">

    <!-- Barra Lateral (Sidebar) con posición fija -->
    <nav class="sidebar bg-dark text-white p-3"
         style="width: 250px; position: fixed; top: 0; bottom: 0;">
        <a class="d-flex align-items-center mb-3 text-decoration-none text-white"
           style="font-size:1.2rem;"
           asp-controller="Home" asp-action="Index">
            <span>The Bury<span>Code.</span></span>
        </a>
        <hr class="text-secondary" />
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a asp-controller="Clientes" asp-action="Index"
                   class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Clientes" ? "active" : "")">
                    <i class="bi bi-people-fill me-2"></i> Clientes
                </a>
            </li>
            <li>
                <a asp-controller="Ventas" asp-action="Index"
                   class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Ventas" ? "active" : "")">
                    <i class="bi bi-cart-fill me-2"></i> Ventas
                </a>
            </li>
            <li>
                <a asp-controller="Productos" asp-action="Index"
                   class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Productos" ? "active" : "")">
                    <i class="bi bi-box-seam me-2"></i> Productos
                </a>
            </li>
            <li>
                <a asp-controller="Catalogo" asp-action="Index"
                   class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Catalogo" ? "active" : "")">
                    <i class="bi bi-bookmark-fill me-2"></i> Catálogo
                </a>
            </li>
            <li>
                <a asp-controller="Proveedores" asp-action="Index"
                   class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Proveedores" ? "active" : "")">
                    <i class="bi bi-truck-flatbed me-2"></i> Proveedores
                </a>
            </li>
            <li>
                <a asp-controller="Promociones" asp-action="Index"
                   class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Promociones" ? "active" : "")">
                    <i class="bi bi-tag-fill me-2"></i> Promociones
                </a>
            </li>
            <li>
                <a asp-controller="Auditoria" asp-action="Index"
                   class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Auditoria" ? "active" : "")">
                    <i class="bi bi-tag-fill me-2"></i> Auditoria
                </a>
            </li>
            <li>
                <a asp-controller="Reportes" asp-action="Index"
                   class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reportes" ? "active" : "")">
                    <i class="bi bi-bar-chart-fill me-2"></i> Reportes
                </a>
            </li>

        </ul>
        <hr class="text-secondary" />
        <div>
            <a asp-controller="Account" asp-action="Logout"
               class="text-decoration-none text-white">
                <i class="bi bi-box-arrow-right me-2"></i>
                <strong>Salir</strong>
            </a>
        </div>
    </nav>

    <!-- Contenido Principal (desplazado a la derecha con margin-left) -->
    <div class="content"
         style="margin-left: 250px; min-height: 100vh;">
        <div class="container-fluid py-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="footer border-top text-muted bg-dark py-3">
            <div class="container">
                &copy; @DateTime.Now.Year - Javo2 - <a asp-controller="Home" asp-action="Privacy" class="text-white">Privacidad</a>
            </div>
        </footer>
    </div>

    <!-- Bootstrap Bundle (Popper + Bootstrap JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
