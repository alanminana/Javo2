@{
    var permisosClaims = User.Claims.Where(c => c.Type == "Permission").Select(c => c.Value).ToArray();
    var permisosJson = JsonSerializer.Serialize(permisosClaims);

    // Nueva estructura de menú que incluye submenús
    var menuItems = new List<dynamic> {
        new { Ctrl = "Home", Action = "Index", Icon = "house-fill", Text = "Inicio", Permiso = (string)null, HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "Clientes", Action = "Index", Icon = "people-fill", Text = "Clientes", Permiso = "clientes.ver", HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "Ventas", Action = "Index", Icon = "cart-fill", Text = "Ventas", Permiso = "ventas.ver", HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "Productos", Action = "Index", Icon = "box-seam", Text = "Productos", Permiso = "productos.ver", HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "Catalogo", Action = "Index", Icon = "bookmark-fill", Text = "Catálogo", Permiso = "productos.ver", HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "Proveedores", Action = "Index", Icon = "truck-flatbed", Text = "Proveedores", Permiso = "productos.ver", HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "Promociones", Action = "Index", Icon = "tag-fill", Text = "Promociones", Permiso = "productos.ver", HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "DevolucionGarantia", Action = "Index", Icon = "journal-check", Text = "Devoluciones/Garantías", Permiso = "ventas.ver", HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "Reportes", Action = "Index", Icon = "bar-chart-fill", Text = "Reportes", Permiso = "reportes.ver", HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "Configuracion", Action = "Index", Icon = "gear-fill", Text = "Configuración", Permiso = "configuracion.ver", HasSubmenu = false, Submenu = new List<dynamic>() },
    new { Ctrl = "SecurityDashboard", Action = "Index", Icon = "shield-lock", Text = "Seguridad", Permiso = "usuarios.ver", HasSubmenu = false, Submenu = new List<dynamic>() }
    };
}
@using System.Text.Json
@using System.Linq
@using System.Security.Claims

@functions {
    bool TienePermiso(string permiso)
    {
        if (string.IsNullOrEmpty(permiso))
            return true;
        return User.HasClaim(c => c.Type == "Permission" && c.Value == permiso);
    }

    bool IsActiveMenu(dynamic item)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();

        if (item.HasSubmenu)
        {
            // Si el controlador actual coincide con el controlador del menú principal
            if (currentController == (string)item.Ctrl)
                return true;

            // Comprobar si coincide con algún submenú (sin usar expresiones lambda)
            foreach (var subItem in item.Submenu)
            {
                if (currentController == (string)subItem.Ctrl)
                    return true;
            }
            return false;
        }

        return currentController == (string)item.Ctrl;
    }

    bool IsSubmenuItemActive(dynamic subItem)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        return (currentController == (string)subItem.Ctrl && currentAction == (string)subItem.Action);
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - The BuryCode</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-dark text-white d-flex flex-column min-vh-100" data-permissions='@permisosJson' data-controller="@ViewContext.RouteData.Values["controller"]" data-action="@ViewContext.RouteData.Values["action"]">

    <!-- Mobile Navbar -->
    <nav class="navbar navbar-dark bg-dark d-md-none">
        <div class="container-fluid">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu" aria-label="Abrir Menú">
                <i class="bi bi-list"></i>
            </button>
            <a class="navbar-brand ms-2" asp-controller="Home" asp-action="Index">The BuryCode.</a>

            <!-- User Info en mobile -->
            @if (User.Identity.IsAuthenticated)
            {
                <partial name="_UserInfo" />
            }
        </div>
    </nav>

    <!-- Offcanvas Mobile Menu -->
    <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
        <div class="offcanvas-header">
            <h5 id="mobileMenuLabel" class="offcanvas-title">Menú</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav nav-pills flex-column mb-4">
                @foreach (var item in menuItems)
                {
                    @if (TienePermiso(item.Permiso))
                    {
                        @if (item.HasSubmenu)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white @(IsActiveMenu(item) ? "active" : "")"
                                   data-bs-toggle="collapse" href="#mobile-@item.Ctrl" role="button"
                                   aria-expanded="@(IsActiveMenu(item) ? "true" : "false")" aria-controls="mobile-@item.Ctrl">
                                    <i class="bi bi-@item.Icon me-2"></i>@item.Text
                                    <i class="bi bi-chevron-down ms-2 small"></i>
                                </a>
                                <div class="collapse @(IsActiveMenu(item) ? "show" : "")" id="mobile-@item.Ctrl">
                                    <ul class="nav nav-pills flex-column ms-3 mt-1">
                                        @foreach (var subItem in item.Submenu)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link text-white @(IsSubmenuItemActive(subItem) ? "active" : "")"
                                                   asp-controller="@subItem.Ctrl" asp-action="@subItem.Action">
                                                    <i class="bi bi-@subItem.Icon me-2"></i>@subItem.Text
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white @(IsActiveMenu(item) ? "active" : "")"
                                   asp-controller="@item.Ctrl" asp-action="@item.Action">
                                    <i class="bi bi-@item.Icon me-2"></i>@item.Text
                                </a>
                            </li>
                        }
                    }
                }
            </ul>
            <hr />
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex">
                    <button type="submit" class="btn btn-outline-light w-100 text-start">
                        <i class="bi bi-box-arrow-right me-2"></i><strong>Cerrar Sesión</strong>
                    </button>
                </form>
            }
            else
            {
                <a class="btn btn-primary w-100" asp-controller="Auth" asp-action="Login">
                    <i class="bi bi-box-arrow-in-right me-2"></i><strong>Iniciar Sesión</strong>
                </a>
            }
        </div>
    </div>

    <div class="container-fluid flex-grow-1">
        <div class="row">
            <!-- Sidebar Desktop -->
            <aside class="col-12 col-md-3 col-xl-2 d-none d-md-block sidebar bg-dark text-white pt-3">
                <a class="d-flex align-items-center mb-3 text-white text-decoration-none fs-5" asp-controller="Home" asp-action="Index">
                    The Bury<span class="text-primary">Code.</span>
                </a>
                <hr class="border-secondary" />
                <ul class="nav nav-pills flex-column mb-auto">
                    @foreach (var item in menuItems)
                    {
                        @if (TienePermiso(item.Permiso))
                        {
                            @if (item.HasSubmenu)
                            {
                                <li class="nav-item dropdown" require-permission="@item.Permiso">
                                    <a class="nav-link dropdown-toggle text-white @(IsActiveMenu(item) ? "active" : "")"
                                       href="#" id="@item.Ctrl-dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-@item.Icon me-2"></i>@item.Text
                                    </a>
                                    <ul class="dropdown-menu bg-dark" aria-labelledby="@item.Ctrl-dropdown">
                                        @foreach (var subItem in item.Submenu)
                                        {
                                            <li>
                                                <a class="dropdown-item text-light" asp-controller="@subItem.Ctrl" asp-action="@subItem.Action">
                                                    <i class="bi bi-@subItem.Icon me-1"></i>@subItem.Text
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(IsActiveMenu(item) ? "active" : "")"
                                       asp-controller="@item.Ctrl" asp-action="@item.Action">
                                        <i class="bi bi-@item.Icon me-2"></i>@item.Text
                                    </a>
                                </li>
                            }
                        }
                    }
                </ul>
                <hr class="border-secondary" />

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-secondary text-light d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                <i class="bi bi-person-fill"></i>
                            </div>
                            <span class="text-light">@User.Identity.Name</span>
                        </div>
                        <form asp-controller="Auth" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link text-light text-decoration-none">
                                <i class="bi bi-box-arrow-right me-1"></i>Cerrar Sesión
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <a class="btn btn-primary w-100" asp-controller="Auth" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                    </a>
                }
            </aside>

            <!-- Main Content -->
            <main class="col-12 col-md-9 col-xl-10 py-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-auto py-3 bg-dark text-muted">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year - Javo2 - <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">Privacidad</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js" crossorigin="anonymous"></script>


    <!-- Core Framework -->
    <script src="~/js/modules/debug.js" asp-append-version="true"></script>
    <script src="~/js/utils/app.js"></script>
    <script src="~/js/core-bundle.min.js"></script>
    <script src="~/js/modules/permissions.js" asp-append-version="true"></script>
    <script src="~/js/modules/forms.js" asp-append-version="true"></script>
    <script src="~/js/modules/tables.js" asp-append-version="true"></script>
    <script src="~/js/modules/products.js" asp-append-version="true"></script>

    <!-- Controladores -->
    <script src="~/js/productos-controller.js" asp-append-version="true"></script>
    <script src="~/js/ventas-controller.js" asp-append-version="true"></script>
    <script src="~/js/proveedores-controller.js" asp-append-version="true"></script>
    <script src="~/js/clientes-controller.js" asp-append-version="true"></script>

    <!-- Módulos específicos -->
    <script src="~/js/modules/producto-form.js" asp-append-version="true"></script>
    <script src="~/js/modules/precio-ajuste.js" asp-append-version="true"></script>
    <script src="~/js/modules/venta-form.js" asp-append-version="true"></script>
    <script src="~/js/modules/cotizacion-form.js" asp-append-version="true"></script>
    <script src="~/js/modules/entrega-productos.js" asp-append-version="true"></script>
    <script src="~/js/modules/proveedor-form.js" asp-append-version="true"></script>
    <script src="~/js/modules/compra-form.js" asp-append-version="true"></script>
    <script src="~/js/modules/cliente-form.js" asp-append-version="true"></script>
    <script src="~/js/modules/devolucion-form.js" asp-append-version="true"></script>
    <script src="~/js/modules/usuarios-permisos.js" asp-append-version="true"></script>
    <script src="~/js/modules/auth.js" asp-append-version="true"></script>
    <script src="~/js/modules/catalogo.js" asp-append-version="true"></script>
    <script src="~/js/modules/reportes.js" asp-append-version="true"></script>

    <!-- Inicialización -->
    <script>
        // Configuración de la aplicación
        $(document).ready(function() {
            // Inicializar core
            App.config.debug = @(ViewBag.DebugMode ?? false ? "true" : "false");

            // Inicializar módulos básicos según la página actual
            const controller = document.body.dataset.controller?.toLowerCase();
            const action = document.body.dataset.action?.toLowerCase();

            // Inicializar controladores apropiados según la página actual
            if (controller === "productos" && App.productoForm) {
                App.productoForm.init();
            }

            if (controller === "ventas" && App.ventaForm) {
                App.ventaForm.init();
            }

            if (controller === "ajusteprecios" && App.precioAjuste) {
                App.precioAjuste.init();
            }

            if (controller === "proveedores") {
                if (action === "create" || action === "edit" && App.proveedorForm) {
                    App.proveedorForm.init();
                }
                if (action === "compra" && App.compraForm) {
                    App.compraForm.init();
                }
            }

            if (controller === "clientes" && App.clienteForm) {
                App.clienteForm.init();
            }

            if (controller === "devoluciongarantia" && App.devolucionForm) {
                App.devolucionForm.init();
            }

            if (controller === "home" || controller === "dashboard") {
                App.dashboard?.init();
            }

            if (controller === "reportes") {
                App.reportes?.init();
            }

            // Seguridad
            if (["permisos", "usuarios", "roles"].includes(controller)) {
                App.usuariosPermisos?.init();
            }

            if (controller === "auth") {
                App.auth?.init();
            }

            if (controller === "catalogo") {
                App.catalogo?.init();
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>