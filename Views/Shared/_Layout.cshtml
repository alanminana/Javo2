@{
    var permisosClaims = User.Claims.Where(c => c.Type == "Permission").Select(c => c.Value).ToArray();
    var permisosJson = JsonSerializer.Serialize(permisosClaims);
    var menuItems = new[] {
        new { Ctrl = "Home", Icon = "house-fill", Text = "Inicio", Permiso = (string)null },
        new { Ctrl = "Clientes", Icon = "people-fill", Text = "Clientes", Permiso = "clientes.ver" },
        new { Ctrl = "Ventas", Icon = "cart-fill", Text = "Ventas", Permiso = "ventas.ver" },
        new { Ctrl = "Productos", Icon = "box-seam", Text = "Productos", Permiso = "productos.ver" },
        new { Ctrl = "Catalogo", Icon = "bookmark-fill", Text = "Catálogo", Permiso = "productos.ver" },
        new { Ctrl = "Proveedores", Icon = "truck-flatbed", Text = "Proveedores", Permiso = "productos.ver" },
        new { Ctrl = "Promociones", Icon = "tag-fill", Text = "Promociones", Permiso = "productos.ver" },
        new { Ctrl = "DevolucionGarantia", Icon = "journal-check", Text = "Devoluciones/Garantías", Permiso = "ventas.ver" },
        new { Ctrl = "Reportes", Icon = "bar-chart-fill", Text = "Reportes", Permiso = "reportes.ver" },
        new { Ctrl = "Configuracion", Icon = "gear-fill", Text = "Configuración", Permiso = "configuracion.ver" },
        new { Ctrl = "SecurityDashboard", Icon = "shield-lock", Text = "Seguridad", Permiso = "usuarios.ver" }
    };
}
@using System.Text.Json
@using System.Linq
@using System.Security.Claims

@functions {
    bool TienePermiso(string permiso)
    {
        if (string.IsNullOrEmpty(permiso))
            return true;
        return User.HasClaim(c => c.Type == "Permission" && c.Value == permiso);
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - The BuryCode</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-dark text-white d-flex flex-column min-vh-100" data-permissions='@permisosJson'>

    <!-- Mobile Navbar -->
    <nav class="navbar navbar-dark bg-dark d-md-none">
        <div class="container-fluid">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu" aria-label="Abrir Menú">
                <i class="bi bi-list"></i>
            </button>
            <a class="navbar-brand ms-2" asp-controller="Home" asp-action="Index">The BuryCode.</a>

            <!-- User Info en mobile -->
            @if (User.Identity.IsAuthenticated)
            {
                <partial name="_UserInfo" />
            }
        </div>
    </nav>

    <!-- Offcanvas Mobile Menu -->
    <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
        <div class="offcanvas-header">
            <h5 id="mobileMenuLabel" class="offcanvas-title">Menú</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav nav-pills flex-column mb-4">
                @foreach (var item in menuItems)
                {
                    @if (item.Permiso == null || TienePermiso(item.Permiso))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString()==item.Ctrl?"active":"")" asp-controller="@item.Ctrl" asp-action="Index">
                                <i class="bi bi-@item.Icon me-2"></i>@item.Text
                            </a>
                        </li>
                    }
                }
            </ul>
            <hr />
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex">
                    <button type="submit" class="btn btn-outline-light w-100 text-start">
                        <i class="bi bi-box-arrow-right me-2"></i><strong>Cerrar Sesión</strong>
                    </button>
                </form>
            }
            else
            {
                <a class="btn btn-primary w-100" asp-controller="Auth" asp-action="Login">
                    <i class="bi bi-box-arrow-in-right me-2"></i><strong>Iniciar Sesión</strong>
                </a>
            }
        </div>
    </div>

    <div class="container-fluid flex-grow-1">
        <div class="row">
            <!-- Sidebar Desktop -->
            <aside class="col-12 col-md-3 col-xl-2 d-none d-md-block sidebar bg-dark text-white pt-3">
                <a class="d-flex align-items-center mb-3 text-white text-decoration-none fs-5" asp-controller="Home" asp-action="Index">
                    The Bury<span class="text-primary">Code.</span>
                </a>
                <hr class="border-secondary" />
                <ul class="nav nav-pills flex-column mb-auto">
                    @foreach (var item in menuItems)
                    {
                        @if (item.Permiso == null || TienePermiso(item.Permiso))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString()==item.Ctrl?"active":"")" asp-controller="@item.Ctrl" asp-action="Index">
                                    <i class="bi bi-@item.Icon me-2"></i>@item.Text
                                </a>
                            </li>
                        }
                    }
                </ul>
                <hr class="border-secondary" />

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-secondary text-light d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                <i class="bi bi-person-fill"></i>
                            </div>
                            <span class="text-light">@User.Identity.Name</span>
                        </div>
                        <form asp-controller="Auth" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link text-light text-decoration-none">
                                <i class="bi bi-box-arrow-right me-1"></i>Cerrar Sesión
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <a class="btn btn-primary w-100" asp-controller="Auth" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                    </a>
                }
            </aside>

            <!-- Main Content -->
            <main class="col-12 col-md-9 col-xl-10 py-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-auto py-3 bg-dark text-muted">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year - Javo2 - <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">Privacidad</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js" crossorigin="anonymous"></script>
    <script src="~/js/permission-validator.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>