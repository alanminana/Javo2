@model dynamic  
@{  
    var provincias = Model.Provincias;  
    var ciudades = Model.Ciudades;  
    var provinciaId = ViewData["ProvinciaSelectId"] ?? "provincias";  
    var ciudadId = ViewData["CiudadSelectId"] ?? "ciudades";  
}  
<div class="row g-3">  
    <div class="col-md-6">  
        <label for="Calle" class="form-label">Calle *</label>  
        <input type="text" id="Calle" name="Calle" value="@Model.Calle" class="form-control bg-secondary text-light" required />  
        <span class="text-danger field-validation-valid" data-valmsg-for="Calle"></span>  
    </div>  
    <div class="col-md-2">  
        <label for="NumeroCalle" class="form-label">Número *</label>  
        <input type="text" id="NumeroCalle" name="NumeroCalle" value="@Model.NumeroCalle" class="form-control bg-secondary text-light" required />  
        <span class="text-danger field-validation-valid" data-valmsg-for="NumeroCalle"></span>  
    </div>  
    <div class="col-md-2">  
        <label for="NumeroPiso" class="form-label">Piso</label>  
        <input type="text" id="NumeroPiso" name="NumeroPiso" value="@Model.NumeroPiso" class="form-control bg-secondary text-light" />  
        <span class="text-danger field-validation-valid" data-valmsg-for="NumeroPiso"></span>  
    </div>  
    <div class="col-md-2">  
        <label for="Dpto" class="form-label">Dpto</label>  
        <input type="text" id="Dpto" name="Dpto" value="@Model.Dpto" class="form-control bg-secondary text-light" />  
        <span class="text-danger field-validation-valid" data-valmsg-for="Dpto"></span>  
    </div>  
    <div class="col-md-4">  
        <label for="ProvinciaID" class="form-label">Provincia *</label>  
        <select id="@provinciaId" name="ProvinciaID" class="form-select bg-secondary text-light" required>  
            <option value="">-- Seleccione una provincia --</option>  
            @foreach (var item in provincias)  
            {  
                <option value="@item.Value" selected="@(item.Value == Model.ProvinciaID.ToString())">@item.Text</option>  
            }  
        </select>  
        <span class="text-danger field-validation-valid" data-valmsg-for="ProvinciaID"></span>  
    </div>  
    <div class="col-md-4">  
        <label for="CiudadID" class="form-label">Ciudad *</label>  
        <select id="@ciudadId" name="CiudadID" class="form-select bg-secondary text-light" required>  
            <option value="">-- Seleccione una ciudad --</option>  
            @if (ciudades != null)  
            {  
                @foreach (var item in ciudades)  
                {  
                    <option value="@item.Value" selected="@(item.Value == Model.CiudadID.ToString())">@item.Text</option>  
                }  
            }  
        </select>  
        <span class="text-danger field-validation-valid" data-valmsg-for="CiudadID"></span>  
    </div>  
    <div class="col-md-4">  
        <label for="Localidad" class="form-label">Localidad</label>  
        <input type="text" id="Localidad" name="Localidad" value="@Model.Localidad" class="form-control bg-secondary text-light" />  
        <span class="text-danger field-validation-valid" data-valmsg-for="Localidad"></span>  
    </div>  
    <div class="col-md-4">  
        <label for="CodigoPostal" class="form-label">Código Postal</label>  
        <input type="text" id="CodigoPostal" name="CodigoPostal" value="@Model.CodigoPostal" class="form-control bg-secondary text-light" />  
        <span class="text-danger field-validation-valid" data-valmsg-for="CodigoPostal"></span>  
    </div>  
</div>