@model Javo2.ViewModels.Operaciones.Productos.ProductosViewModel

<h2>Detalles del Producto</h2>

<div>
    <h4>@Model.Nombre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Precio Costo</dt>
        <dd class="col-sm-10">@Model.PCosto</dd>

        <dt class="col-sm-2">Precio Contado</dt>
        <dd class="col-sm-10">@Model.PContado</dd>

        <dt class="col-sm-2">Precio Lista</dt>
        <dd class="col-sm-10">@Model.PLista</dd>

        <dt class="col-sm-2">Porcentaje IVA</dt>
        <dd class="col-sm-10">@Model.PorcentajeIva%</dd>

        <dt class="col-sm-2">Stock Disponible</dt>
        <dd class="col-sm-10">@Model.CantidadDisponible</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductoID">Editar</a> |
    <a asp-action="Index">Volver a la Lista</a>
</div>
