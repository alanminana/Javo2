@model Javo2.ViewModels.Operaciones.Productos.ProductosViewModel
@{
    var isEdit = Model.ProductoID > 0;
    ViewBag.Title = isEdit ? "Editar Producto" : "Crear Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-header">
                    <h2 class="h5 mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    <form asp-action="@(isEdit?"Edit":"Create")" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.ProductoID)
                        @Html.HiddenFor(m => m.ModificadoPor)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label text-light"></label>
                                    <input asp-for="Nombre" class="form-control bg-secondary text-light" />
                                    <span asp-validation-for="Nombre" class="invalid-feedback d-block"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label text-light"></label>
                                    <textarea asp-for="Descripcion" class="form-control bg-secondary text-light" rows="3"></textarea>
                                    <span asp-validation-for="Descripcion" class="invalid-feedback d-block"></span>
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label asp-for="PCosto" class="form-label text-light"></label>
                                        <input asp-for="PCosto" class="form-control bg-secondary text-light" type="number" step="0.01" />
                                        <span asp-validation-for="PCosto" class="invalid-feedback d-block"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="PContado" class="form-label text-light"></label>
                                        <input asp-for="PContado" class="form-control bg-secondary text-light" type="number" step="0.01" />
                                        <span asp-validation-for="PContado" class="invalid-feedback d-block"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="PLista" class="form-label text-light"></label>
                                        <input asp-for="PLista" class="form-control bg-secondary text-light" type="number" step="0.01" />
                                        <span asp-validation-for="PLista" class="invalid-feedback d-block"></span>
                                    </div>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label asp-for="PorcentajeIva" class="form-label text-light"></label>
                                    <input asp-for="PorcentajeIva" class="form-control bg-secondary text-light" type="number" step="0.01" />
                                    <span asp-validation-for="PorcentajeIva" class="invalid-feedback d-block"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SelectedRubroID" class="form-label text-light">Rubro</label>
                                    <select asp-for="SelectedRubroID" class="form-select bg-secondary text-light" asp-items="Model.Rubros" id="rubroSelect">
                                        <option value="">Seleccione un Rubro</option>
                                    </select>
                                    <span asp-validation-for="SelectedRubroID" class="invalid-feedback d-block"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="SelectedSubRubroID" class="form-label text-light">SubRubro</label>
                                    <select asp-for="SelectedSubRubroID" class="form-select bg-secondary text-light" asp-items="Model.SubRubros" id="subRubroSelect">
                                        <option value="">Seleccione un SubRubro</option>
                                    </select>
                                    <span asp-validation-for="SelectedSubRubroID" class="invalid-feedback d-block"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="SelectedMarcaID" class="form-label text-light">Marca</label>
                                    <select asp-for="SelectedMarcaID" class="form-select bg-secondary text-light" asp-items="Model.Marcas">
                                        <option value="">Seleccione una Marca</option>
                                    </select>
                                    <span asp-validation-for="SelectedMarcaID" class="invalid-feedback d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save me-1"></i>
                                <span>@(isEdit ? "Actualizar" : "Crear")</span>
                            </button>
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left me-1"></i>
                                <span>Volver</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script defer>
        (function($) {
            $(function() {
                $('#rubroSelect').change(function() {
                    var id = $(this).val();
                    var sub = $('#subRubroSelect').empty().append('<option>Seleccione...</option>');
                    if (!id) return;
                    $.getJSON('@Url.Action("GetSubRubros", "Productos")', { rubroId: id })
                     .done(data => data.forEach(item => sub.append($('<option>', { value: item.value, text: item.text })) ))
                     .fail(() => alert('Error al cargar SubRubros'));
                });
        @if (isEdit)
        {
            <text>$('#rubroSelect').trigger('change');</text>
        }
            });
        })(jQuery);
    </script>
}