@model Javo2.ViewModels.Operaciones.Stock.StockItemViewModel
@{
    ViewBag.Title = "Movimientos de Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0">@ViewBag.Title: @Model.NombreProducto</h2>
                    <a asp-action="Index" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
                <div class="card-body">
                    <!-- Información del Producto -->
                    <div class="mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">ID del Producto:</dt>
                                    <dd class="col-sm-8">@Model.ProductoID</dd>

                                    <dt class="col-sm-4">Nombre:</dt>
                                    <dd class="col-sm-8">@Model.NombreProducto</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Stock Actual:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge @(Model.CantidadDisponible > 0 ? "bg-success" : "bg-danger")">
                                            @Model.CantidadDisponible unidades
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <!-- Acciones -->
                    <div class="mb-4">
                        <a asp-action="AjusteStock" asp-route-id="@Model.ProductoID" class="btn btn-primary me-2">
                            <i class="bi bi-gear me-1"></i> Ajustar Stock
                        </a>
                    </div>

                    <!-- Historial de Movimientos -->
                    <h3 class="h5 mb-3">Historial de Movimientos</h3>
                    <div class="table-responsive">
                        <table class="table table-dark table-striped table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Tipo</th>
                                    <th>Cantidad</th>
                                    <th>Motivo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Movimientos != null && Model.Movimientos.Any())
                                {
                                    @foreach (var mov in Model.Movimientos.OrderByDescending(m => m.Fecha))
                                    {
                                        <tr>
                                            <td>@mov.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @if (mov.TipoMovimiento.Equals("Entrada", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="badge bg-success">Entrada</span>
                                                }
                                                else if (mov.TipoMovimiento.Equals("Salida", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="badge bg-danger">Salida</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">@mov.TipoMovimiento</span>
                                                }
                                            </td>
                                            <td>
                                                @if (mov.TipoMovimiento.Equals("Entrada", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="text-success">+@mov.Cantidad</span>
                                                }
                                                else if (mov.TipoMovimiento.Equals("Salida", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="text-danger">-@mov.Cantidad</span>
                                                }
                                                else
                                                {
                                                    <span>@mov.Cantidad</span>
                                                }
                                            </td>
                                            <td>@mov.Motivo</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No hay movimientos registrados.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>