@model IEnumerable<Javo2.ViewModels.Operaciones.Productos.ProductosViewModel>

@foreach (var producto in Model)
{
    <tr>
        <td><input type="checkbox" name="ProductoIDs" value="@producto.ProductoID" /></td>
        <td>@producto.Nombre</td>
        <td>@producto.PCosto</td>
        <td>@producto.PContado</td>
        <td>@producto.PLista</td>
        <td>@producto.CantidadDisponible</td> <!-- Nueva columna para mostrar stock -->
        <td>
            <a asp-action="Edit" asp-route-id="@producto.ProductoID" class="btn btn-sm btn-warning me-1">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Delete" asp-route-id="@producto.ProductoID" class="btn btn-sm btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </a>
        </td>
    </tr>
}
