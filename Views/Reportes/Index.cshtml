@{
    ViewBag.Title = "Reportes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <h1 class="h2 text-light mb-4">@ViewBag.Title</h1>

    <!-- Panel de Reportes como tarjetas -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Ranking de Ventas -->
        <div class="col">
            <a asp-action="RankingVentas" class="text-decoration-none">
                <div class="card h-100 shadow-sm bg-dark text-light hover-lift">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="bi bi-list-ol display-4 mb-3" aria-hidden="true"></i>
                        <h5 class="card-title">Ranking de Ventas</h5>
                        <p class="card-text text-center">Consulta y ordena las ventas por volumen.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Exportar Ventas a Excel -->
        <div class="col">
            <a asp-action="ExportVentasToExcel" class="text-decoration-none">
                <div class="card h-100 shadow-sm bg-dark text-light hover-lift">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="bi bi-file-earmark-excel display-4 mb-3" aria-hidden="true"></i>
                        <h5 class="card-title">Exportar a Excel</h5>
                        <p class="card-text text-center">Descarga un Excel detallado de todas las ventas.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Reporte de Stock -->
        <div class="col">
            <a asp-action="ReporteStock" class="text-decoration-none">
                <div class="card h-100 shadow-sm bg-dark text-light hover-lift">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="bi bi-card-checklist display-4 mb-3" aria-hidden="true"></i>
                        <h5 class="card-title">Reporte de Stock</h5>
                        <p class="card-text text-center">Visualiza niveles de inventario en tiempo real.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }
</style>
