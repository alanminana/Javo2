@model Javo2.ViewModels.Authentication.RolDetailsViewModel
@{
    ViewData["Title"] = "Eliminar Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="card shadow-sm bg-dark text-light">
        <div class="card-header">
            <h2 class="h4 mb-0 text-danger">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h3 class="h5"><i class="bi bi-exclamation-triangle me-2"></i>¿Está seguro que desea eliminar este rol?</h3>
                <p class="mb-0">Esta acción no se puede deshacer y eliminará la asignación de este rol a los usuarios asociados.</p>
            </div>

            <dl class="row mt-4">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Rol.RolID</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Rol.Nombre</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Model.Rol.Descripcion</dd>

                <dt class="col-sm-3">Permisos</dt>
                <dd class="col-sm-9">
                    @if (Model.Permisos != null && Model.Permisos.Any())
                    {
                        <div class="mb-2">Este rol tiene @Model.Permisos.Count permisos asignados:</div>
                        <div class="d-flex flex-wrap gap-1">
                            @foreach (var permiso in Model.Permisos.OrderBy(p => p.Grupo).ThenBy(p => p.Nombre))
                            {
                                <span class="badge bg-secondary">@permiso.Nombre</span>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">Este rol no tiene permisos asignados.</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Cancelar
                </a>
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Rol.RolID" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
