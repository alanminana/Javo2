@model Javo2.ViewModels.Authentication.RolDetailsViewModel
@{
    ViewData["Title"] = "Detalles de Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">@ViewData["Title"]</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Rol.RolID" class="btn btn-primary btn-sm">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm bg-dark text-light mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Información del rol</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Rol.RolID</dd>

                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Rol.Nombre</dd>

                        <dt class="col-sm-4">Descripción</dt>
                        <dd class="col-sm-8">@Model.Rol.Descripcion</dd>

                        <dt class="col-sm-4">Tipo</dt>
                        <dd class="col-sm-8">
                            @if (Model.Rol.EsSistema)
                            {
                                <span class="badge bg-primary">Sistema</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Personalizado</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Total permisos</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-dark">@Model.Permisos.Count permisos</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm bg-dark text-light">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Permisos asignados</h4>
                    @if (Model.Permisos.Any())
                    {
                        <div class="badge bg-secondary">
                            <input class="form-control form-control-sm" type="text" id="permisosFilter"
                                   placeholder="Filtrar permisos..." style="width: 200px;">
                        </div>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Permisos != null && Model.Permisos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Código</th>
                                        <th>Grupo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var permiso in Model.Permisos.OrderBy(p => p.Grupo).ThenBy(p => p.Nombre))
                                    {
                                        <tr class="permiso-row">
                                            <td>@permiso.Nombre</td>
                                            <td><code>@permiso.Codigo</code></td>
                                            <td>@(permiso.Grupo ?? "General")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i> Este rol no tiene permisos asignados.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/Roles/Details.js"></script>


    }

}