@model Javo2.Models.Authentication.Permiso
@{
    ViewData["Title"] = "Eliminar Permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="card shadow-sm bg-dark text-light">
        <div class="card-header">
            <h2 class="h4 mb-0 text-danger">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h3 class="h5"><i class="bi bi-exclamation-triangle me-2"></i>¿Está seguro que desea eliminar este permiso?</h3>
                <p class="mb-0">Esta acción no se puede deshacer. Los roles que utilizan este permiso perderán la capacidad asociada.</p>
            </div>

            <dl class="row mt-4">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.PermisoID</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Código</dt>
                <dd class="col-sm-9"><code>@Model.Codigo</code></dd>

                <dt class="col-sm-3">Grupo</dt>
                <dd class="col-sm-9">@Model.Grupo</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Cancelar
                </a>
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.PermisoID" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Eliminar Permiso
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>