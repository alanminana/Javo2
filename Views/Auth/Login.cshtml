@model Javo2.ViewModels.Authentication.LoginViewModel
@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 my-5">
                <div class="card-body p-0">
                    <div class="p-5">

                        <!-- logo + encabezado -->
                        <div class="text-center mb-4">
                            <img src="~/img/logo.png"
                                 class="img-fluid mb-3"
                                 style="max-width:150px"
                                 alt="Logo"
                                 onerror="this.remove();" />

                            <h1 class="h4 text-light mb-2">Bienvenido</h1>
                            <p class="text-white-50">Ingrese sus credenciales para acceder</p>
                        </div>

                        <!-- formulario -->
                        <form asp-action="Login"
                              asp-route-returnUrl="@ViewBag.ReturnUrl"
                              method="post"
                              class="user"
                              autocomplete="off">

                            <div asp-validation-summary="ModelOnly"
                                 class="alert alert-danger d-none"></div>

                            <!-- usuario -->
                            <div class="form-floating mb-3">
                                <input asp-for="NombreUsuario"
                                       class="form-control"
                                       autocomplete="username"
                                       placeholder="Nombre de usuario" />
                                <label asp-for="NombreUsuario">Usuario</label>
                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                            </div>

                            <!-- contraseña -->
                            <div class="form-floating mb-3">
                                <input asp-for="Contraseña"
                                       class="form-control"
                                       type="password"
                                       autocomplete="current-password"
                                       placeholder="Contraseña" />
                                <label asp-for="Contraseña">Contraseña</label>
                                <span asp-validation-for="Contraseña" class="text-danger"></span>
                            </div>

                            <!-- recordar -->
                            <div class="form-check mb-3">
                                <input asp-for="RecordarMe" class="form-check-input" />
                                <label asp-for="RecordarMe"
                                       class="form-check-label"
                                       style="color:#fff">Recordar sesión</label>
                            </div>


                            <!-- submit -->
                            <button type="submit"
                                    class="btn btn-primary w-100 py-2 mb-3">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Iniciar sesión
                            </button>

                            <hr>

                            <!-- link contraseña -->
                            <div class="text-center">
                                <a asp-controller="ResetPassword"
                                   asp-action="OlvideContraseña"
                                   class="text-decoration-none">
                                    ¿Olvidaste tu contraseña?
                                </a>
                            </div>
                        </form>

                    </div><!-- /.p-5 -->
                </div><!-- /.card-body -->
            </div><!-- /.card -->
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/Auth/Login.js"></script>
}
