@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-shield-lock-fill me-2"></i>@ViewData["Title"]</h2>
                </div>
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h3>No tiene los permisos necesarios para acceder a esta página</h3>
                    <p class="lead text-muted">
                        Su usuario no cuenta con los permisos requeridos para visualizar el contenido solicitado.
                        Si cree que esto es un error, contacte con el administrador del sistema.
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                            <i class="bi bi-house-fill me-1"></i> Ir a la página principal
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Volver atrás
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>