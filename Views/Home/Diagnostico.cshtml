<!-- Views/Home/Diagnostico.cshtml -->
@model Dictionary<string, string>
@{
    ViewData["Title"] = "Diagnóstico del Sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="my-4">Diagnóstico del Sistema</h1>

    <div class="card bg-dark text-light">
        <div class="card-header">
            <h5>Información de Sistema</h5>
        </div>
        <div class="card-body">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Propiedad</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Key</td>
                            <td>@item.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>