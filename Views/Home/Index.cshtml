@* Views/Home/Dashboard.cshtml *@
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contenedor Principal -->
<div class="container-fluid px-4">

    <!-- Alertas Importantes (top) -->
    <div class="alert alert-warning d-flex align-items-start shadow-sm mt-4 mb-4" role="alert">
        <div class="me-3">
            <i class="bi bi-exclamation-triangle-fill fs-2"></i>
        </div>
        <div>
            <h5 class="alert-heading mb-2">Alertas Importantes</h5>
            <ul class="mb-0 ps-3">
                <li>Actualizar inventario antes del <strong>2025-05-01</strong></li>
                <li>Facturas pendientes de clientes VIP</li>
                <li>Stock crítico de repuestos bajo nivel</li>
            </ul>
        </div>
    </div>

    <!-- Tarjetas de Resumen -->
    <div class="row row-cols-1 row-cols-md-3 g-3 mb-5">
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h6 class="card-title text-dark">Cantidad de Ventas</h6>
                    <p class="display-5 fw-semibold mb-0 text-dark">1,234</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h6 class="card-title text-dark">Ventas Pendientes</h6>
                    <p class="display-5 fw-semibold mb-0 text-dark">56</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h6 class="card-title text-dark">Pedidos a Proveedores</h6>
                    <p class="display-5 fw-semibold mb-0 text-dark">12</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Cotización del Dólar -->
    <section class="mb-5">
        <h3 class="mb-3 text-dark">Cotización del Dólar</h3>
        <div id="card-container" class="d-flex flex-wrap gap-3"></div>
    </section>

    <!-- Sección de Datos y Gráficos -->
    <div class="row g-4">
        <!-- Clientes por Pagar -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title mb-3 text-dark">Clientes por Pagar</h6>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-borderless mb-0">
                            <thead class="table-light">
                                <tr class="text-dark">
                                    <th>Cliente</th>
                                    <th>Cuota</th>
                                    <th>Vence</th>
                                    <th class="text-end">Monto</th>
                                </tr>
                            </thead>
                            <tbody class="text-dark">
                                <tr>
                                    <td>Juan Pérez</td>
                                    <td>3/12</td>
                                    <td>2025-04-28</td>
                                    <td class="text-end">$1,200</td>
                                </tr>
                                <tr>
                                    <td>Ana Gómez</td>
                                    <td>1/6</td>
                                    <td>2025-05-02</td>
                                    <td class="text-end">$800</td>
                                </tr>
                                <tr>
                                    <td>María López</td>
                                    <td>5/10</td>
                                    <td>2025-04-30</td>
                                    <td class="text-end">$950</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ventas (Línea) -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title mb-3 text-dark">Ventas (últimos 6 meses)</h6>
                    <div class="chart-container" style="height:280px;">
                        <canvas id="ventasChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Productos (Barras) -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title mb-3 text-dark">Top Productos Vendidos</h6>
                    <div class="chart-container" style="height:280px;">
                        <canvas id="productosChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Proveedores por Pagar -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title mb-3 text-dark">Proveedores por Pagar</h6>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-borderless mb-0">
                            <thead class="table-light">
                                <tr class="text-dark">
                                    <th>Proveedor</th>
                                    <th class="text-end">Monto</th>
                                    <th>Vence</th>
                                </tr>
                            </thead>
                            <tbody class="text-dark">
                                <tr>
                                    <td>Proveedor A</td>
                                    <td class="text-end">$2,500</td>
                                    <td>2025-05-05</td>
                                </tr>
                                <tr>
                                    <td>Proveedor B</td>
                                    <td class="text-end">$1,800</td>
                                    <td>2025-05-10</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /container-fluid -->
    @section Scripts {
        <script type="module">
            document.addEventListener('DOMContentLoaded', async () => {
              // Mostrar solo 2 cotizaciones
              const container = document.getElementById('card-container');
              container.innerHTML = '';
              try {
                const resp = await fetch('https://dolarapi.com/v1/dolares');
                const data = await resp.json();
                data.slice(0, 2).forEach(d => {
                  const card = document.createElement('div');
                  card.className = 'card bg-secondary text-dark p-3 shadow-sm';
                  card.style.minWidth = '180px';
                  card.innerHTML = `
                    <div class="card-body text-center text-dark">
                      <h6 class="card-title mb-2">${d.nombre}</h6>
                      <p class="mb-1">Compra: <strong>${d.compra}</strong></p>
                      <p class="mb-1">Venta: <strong>${d.venta}</strong></p>
                      <small>${new Date(d.fechaActualizacion).toLocaleString()}</small>
                    </div>`;
                  container.appendChild(card);
                });
              } catch {
                container.innerHTML = '<p class="text-danger">No se pudieron cargar las cotizaciones.</p>';
              }

              // Configuración de gráficos
              const colors = { ventas: 'rgba(54,162,235,0.6)', productos: 'rgba(255,159,64,0.6)' };
              const initChart = (id, type, labels, data, bg) => {
                new Chart(document.getElementById(id).getContext('2d'), { type, data: { labels, datasets: [{ data, backgroundColor: bg, borderColor: bg.replace('0.6','1'), borderWidth: 2 }] }, options: { responsive:true, maintainAspectRatio:false, plugins:{ legend:{ position:'bottom'} } } });
              };
              initChart('ventasChart','line',['Ene','Feb','Mar','Abr','May','Jun'],[2000,3000,4000,3500,5000,6000],colors.ventas);
              initChart('productosChart','bar',['Prod A','Prod B','Prod C','Prod D','Prod E'],[120,95,80,60,45],colors.productos);
            });
        </script>
    }
