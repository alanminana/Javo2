@* Views/Home/Dashboard.cshtml *@
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contenedor Principal -->
<div class="container-fluid px-4">

    <!-- Alertas Importantes (top) -->
    <div class="alert alert-warning d-flex align-items-start shadow-sm mt-4 mb-4" role="alert">
        <div class="me-3">
            <i class="bi bi-exclamation-triangle-fill fs-2"></i>
        </div>
        <div>
            <h5 class="alert-heading mb-2">Alertas Importantes</h5>
            <ul class="mb-0 ps-3">
                <li>Actualizar inventario antes del <strong>2025-05-01</strong></li>
                <li>Facturas pendientes de clientes VIP</li>
                <li>Stock crítico de repuestos bajo nivel</li>
            </ul>
        </div>
    </div>

    <!-- Tarjetas de Resumen -->
    <div class="row row-cols-1 row-cols-md-3 g-3 mb-5">
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h6 class="card-title text-dark">Cantidad de Ventas</h6>
                    <p class="display-5 fw-semibold mb-0 text-dark">1,234</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h6 class="card-title text-dark">Ventas Pendientes</h6>
                    <p class="display-5 fw-semibold mb-0 text-dark">56</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h6 class="card-title text-dark">Pedidos a Proveedores</h6>
                    <p class="display-5 fw-semibold mb-0 text-dark">12</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Cotización del Dólar -->
    <section class="mb-5">
        <h3 class="mb-3 text-dark">Cotización del Dólar</h3>
        <div id="card-container" class="d-flex flex-wrap gap-3"></div>
    </section>

    <!-- Sección de Datos y Gráficos -->
    <div class="row g-4">
        <!-- Clientes por Pagar -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title mb-3 text-dark">Clientes por Pagar</h6>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-borderless mb-0">
                            <thead class="table-light">
                                <tr class="text-dark">
                                    <th>Cliente</th>
                                    <th>Cuota</th>
                                    <th>Vence</th>
                                    <th class="text-end">Monto</th>
                                </tr>
                            </thead>
                            <tbody class="text-dark">
                                <tr>
                                    <td>Juan Pérez</td>
                                    <td>3/12</td>
                                    <td>2025-04-28</td>
                                    <td class="text-end">$1,200</td>
                                </tr>
                                <tr>
                                    <td>Ana Gómez</td>
                                    <td>1/6</td>
                                    <td>2025-05-02</td>
                                    <td class="text-end">$800</td>
                                </tr>
                                <tr>
                                    <td>María López</td>
                                    <td>5/10</td>
                                    <td>2025-04-30</td>
                                    <td class="text-end">$950</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ventas (Línea) -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title mb-3 text-dark">Ventas (últimos 6 meses)</h6>
                    <div class="chart-container" style="height:280px;">
                        <canvas id="ventasChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Productos (Barras) -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title mb-3 text-dark">Top Productos Vendidos</h6>
                    <div class="chart-container" style="height:280px;">
                        <canvas id="productosChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Proveedores por Pagar -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title mb-3 text-dark">Proveedores por Pagar</h6>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-borderless mb-0">
                            <thead class="table-light">
                                <tr class="text-dark">
                                    <th>Proveedor</th>
                                    <th class="text-end">Monto</th>
                                    <th>Vence</th>
                                </tr>
                            </thead>
                            <tbody class="text-dark">
                                <tr>
                                    <td>Proveedor A</td>
                                    <td class="text-end">$2,500</td>
                                    <td>2025-05-05</td>
                                </tr>
                                <tr>
                                    <td>Proveedor B</td>
                                    <td class="text-end">$1,800</td>
                                    <td>2025-05-10</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /container-fluid -->
   
    