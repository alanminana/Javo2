@model Javo2.ViewModels.Operaciones.Catalogo.RubroViewModel

<input type="hidden" asp-for="ID" />

<div class="mb-4">
    <label asp-for="Nombre" class="form-label text-light">Nombre del Rubro</label>
    <input asp-for="Nombre" class="form-control bg-secondary text-light" />
    <span asp-validation-for="Nombre" class="invalid-feedback d-block"></span>
</div>

<div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-primary me-2">
        <i class="bi bi-save me-1" aria-hidden="true"></i>
        <span>@(Model.ID > 0 ? "Guardar" : "Agregar")</span>
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>
        <span>Volver al Listado</span>
    </a>
</div>