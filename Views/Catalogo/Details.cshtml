@using Javo2.ViewModels.Operaciones.Proveedores
@model ProveedoresViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalles del Proveedor";
}

<h2 class="mb-4">@ViewBag.Title</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.ProveedorID</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <!-- Añadir más detalles según sea necesario -->
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Volver al Listado</a>
