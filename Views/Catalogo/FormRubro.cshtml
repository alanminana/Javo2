@model Javo2.ViewModels.Operaciones.Catalogo.RubroViewModel
@{
    ViewData["EntityName"] = "Rubro";
    ViewData["IsEdit"] = Model.ID > 0;
    ViewData["FormAction"] = Model.ID > 0 ? "EditRubro" : "CreateRubro";
    Layout = "~/Views/Shared/_CrudForm.cshtml";
}

@await Html.PartialAsync("_RubroForm", Model)

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/modules/catalogo.js" asp-append-version="true"></script>
}