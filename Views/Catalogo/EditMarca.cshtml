@model Javo2.ViewModels.Operaciones.Catalogo.MarcaViewModel
@{
    ViewBag.Title = "Editar Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-light">
                    <h2 class="h5 mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    <form asp-action="EditMarca" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        @await Html.PartialAsync("_MarcaForm", Model)
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/modules/catalogo.js" asp-append-version="true"></script>
}