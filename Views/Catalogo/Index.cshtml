@using Javo2.ViewModels.Operaciones.Catalogo
@model CatalogoIndexViewModel
@{
    ViewBag.Title = "Catálogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <!-- Encabezado del Catálogo -->
    <div class="d-flex align-items-center mb-4">
        <h1 class="h2 mb-0">@ViewBag.Title</h1>
    </div>

    <!-- Resumen del Catálogo -->
    <div class="summary-cards mb-4" role="region" aria-labelledby="catalogSummary">
        <h2 id="catalogSummary" class="visually-hidden">Resumen del Catálogo</h2>
        <div class="summary-card">
            <h5>Total de Rubros</h5>
            <p class="display-6">@Model.Rubros.Count()</p>
        </div>
        <div class="summary-card">
            <h5>Total de Marcas</h5>
            <p class="display-6">@Model.Marcas.Count()</p>
        </div>
        <div class="summary-card">
            <h5>Total de SubRubros</h5>
            <p class="display-6">@Model.Rubros.SelectMany(r => r.SubRubros).Count()</p>
        </div>
    </div>

    <!-- Rubros y SubRubros -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-light d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">Rubros y SubRubros</h2>
            @if (User.HasPermission("catalogo.crear"))
            {
                <a asp-action="CreateRubro" class="btn btn-success btn-sm">
                    <i class="bi bi-plus-circle me-1"></i><span>Agregar Rubro</span>
                </a>
            }
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-dark mb-0" aria-label="Listado de Rubros y SubRubros">
                    <thead>
                        <tr>
                            <th scope="col">Rubro</th>
                            <th scope="col">SubRubros</th>
                            <th scope="col">Total Stock</th>
                            <th scope="col" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @await Html.PartialAsync("_RubrosTable", Model.Rubros)
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Marcas -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-light d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">Marcas</h2>
            <a asp-action="CreateMarca" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle me-1"></i><span>Agregar Marca</span>
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-dark mb-0" aria-label="Listado de Marcas">
                    <thead>
                        <tr>
                            <th scope="col">Marca</th>
                            <th scope="col">Total Stock</th>
                            <th scope="col" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @await Html.PartialAsync("_MarcasTable", Model.Marcas)
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script defer>
        (function($) {
            $(function() {
                $('#applyFilter').on('click', function() {
                    var term = $('#filterValue').val();
                    $.get('@Url.Action("FilterAsync", "Catalogo")', { term: term })
                     .done(function(data) {
                        $('#rubrosTableBody').html(data.rubrosPartial);
                        $('#marcasTableBody').html(data.marcasPartial);
                     })
                     .fail(function() {
                        alert('Error al aplicar filtro');
                     });
                });
                $('#clearFilter').on('click', function() {
                    $('#filterValue').val('').trigger('input');
                    $('#applyFilter').click();
                });
            });
        })(jQuery);
    </script>
}