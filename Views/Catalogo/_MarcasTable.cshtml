@model IEnumerable<Javo2.ViewModels.Operaciones.Catalogo.MarcaViewModel>
@foreach (var marca in Model)
{
    <tr>
        <td scope="row">@marca.Nombre</td>
        <td>@marca.TotalStock</td>
        <td class="text-center">
            <div class="btn-group" role="group" aria-label="Acciones para @marca.Nombre">
                <a asp-action="EditMarca"
                   asp-route-id="@marca.ID"
                   class="btn btn-sm btn-outline-warning"
                   title="Editar marca @marca.Nombre">
                    <i class="bi bi-pencil-square" aria-hidden="true"></i>
                    <span class="visually-hidden">Editar</span>
                </a>
                <form asp-action="DeleteMarca"
                      asp-route-id="@marca.ID"
                      method="post"
                      class="d-inline"
                      onsubmit="return confirm('¿Seguro que deseas eliminar la marca @marca.Nombre?');">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-sm btn-outline-danger"
                            title="Eliminar marca @marca.Nombre">
                        <i class="bi bi-trash" aria-hidden="true"></i>
                        <span class="visually-hidden">Eliminar</span>
                    </button>
                </form>
            </div>
        </td>
    </tr>
}
