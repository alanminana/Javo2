@using Javo2.ViewModels.Operaciones.Catalogo
@model RubroViewModel
@{
    ViewBag.Title = "Editar Rubro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-light">
                    <h2 class="h5 mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    <form asp-action="EditRubro" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ID" />

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label text-light"></label>
                            <input asp-for="Nombre" class="form-control bg-secondary text-light" />
                            <span asp-validation-for="Nombre" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left me-1"></i>Volver
                            </a>
                            @if (User.HasPermission("catalogo.editar"))
                            {
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-1"></i>Guardar
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
